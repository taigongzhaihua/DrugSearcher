<Page x:Class="DrugSearcher.Views.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:viewModels="clr-namespace:DrugSearcher.ViewModels"
      xmlns:behaviors="clr-namespace:DrugSearcher.Behaviors" 
      xmlns:converters="clr-namespace:DrugSearcher.Converters"
      mc:Ignorable="d"
      d:DesignHeight="700" d:DesignWidth="900"
      d:DataContext="{d:DesignInstance viewModels:AboutPageViewModel}"
      Title="关于">

    <Page.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        
        <!-- 版本卡片样式 -->
        <Style x:Key="VersionCardStyle" TargetType="Border">
            <Setter Property="behaviors:ThemeBehavior.Background" Value="{DynamicResource SecondaryBackgroundBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="0.8" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="20" />
            <Setter Property="Margin" Value="0,0,0,16" />
            <Setter Property="Effect" Value="{StaticResource DropShadowEffect}" />
        </Style>

        <!-- 功能列表样式 -->
        <Style x:Key="FeatureListStyle" TargetType="ItemsControl">
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <TextBlock Text="●" 
                                       Foreground="{DynamicResource PrimaryBrush}" 
                                       FontSize="12" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding}" 
                                       Foreground="{DynamicResource PrimaryTextBrush}" 
                                       FontSize="13" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 修复列表样式 -->
        <Style x:Key="FixListStyle" TargetType="ItemsControl">
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <TextBlock Text="✓" 
                                       Foreground="{DynamicResource SuccessBrush}" 
                                       FontSize="12" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding}" 
                                       Foreground="{DynamicResource PrimaryTextBrush}" 
                                       FontSize="13" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid behaviors:ThemeBehavior.Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- 页面头部 -->
        <Border Grid.Row="0"
                behaviors:ThemeBehavior.Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="32,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- 应用图标 -->
                <Border Grid.Column="0"
                        Width="64" Height="64"
                        Background="{DynamicResource PrimaryBrush}"
                        CornerRadius="16"
                        Margin="0,0,20,0">
                    <TextBlock Text="&#xe629;"
                               FontFamily="{DynamicResource IconFont}"
                               FontSize="36"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>

                <!-- 应用信息 -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="{Binding AppName}"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="{DynamicResource PrimaryTextBrush}" />
                    <TextBlock Text="{Binding AppDescription}"
                               FontSize="16"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               TextWrapping="Wrap"
                               Margin="0,8,0,0" />
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <TextBlock Text="版本: " 
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   FontSize="14"/>
                        <TextBlock Text="{Binding CurrentVersion.Version}" 
                                   Foreground="{DynamicResource PrimaryBrush}"
                                   FontSize="14"
                                   FontWeight="Medium"/>
                        <Border Background="{DynamicResource WarningBrush}"
                                CornerRadius="4"
                                Padding="6,2"
                                Margin="8,0,0,0"
                                Visibility="{Binding CurrentVersion.IsPreRelease, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="预发布版本" 
                                       Foreground="White"
                                       FontSize="11"
                                       FontWeight="Medium"/>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <!-- 检查更新按钮 -->
                <Button Grid.Column="2"
                        Content="检查更新"
                        Style="{StaticResource BaseButtonStyle}"
                        Command="{Binding CheckForUpdatesCommand}"
                        IsEnabled="{Binding IsCheckingUpdate, Converter={StaticResource InverseBooleanConverter}}"
                        VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- 主要内容区域 -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      Padding="32,24"
                      Background="Transparent" >
            <StackPanel MaxWidth="600" HorizontalAlignment="Stretch">

                <!-- 状态消息 -->
                <Border Background="{DynamicResource PrimaryBrush}"
                        CornerRadius="6"
                        Padding="16,12"
                        Margin="0,0,0,24"
                        Visibility="{Binding StatusMessage, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- 状态图标 -->
                        <TextBlock Grid.Column="0"
                                   Text="&#xe61e;"
                                   FontFamily="{DynamicResource IconFont}"
                                   FontSize="18"
                                   Foreground="White"
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,0"/>

                        <!-- 状态文本 -->
                        <TextBlock Grid.Column="1"
                                   Text="{Binding StatusMessage}"
                                   Foreground="White"
                                   FontSize="14"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"/>

                        <!-- 加载指示器 -->
                        <ProgressBar Grid.Column="2"
                                     Width="100"
                                     Height="4"
                                     IsIndeterminate="True"
                                     Background="Transparent"
                                     Foreground="White"
                                     Visibility="{Binding IsCheckingUpdate, Converter={StaticResource BooleanToVisibilityConverter}}"
                                     VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- 更新信息 -->
                <Border Style="{StaticResource VersionCardStyle}"
                        Visibility="{Binding UpdateCheckResult.HasUpdate, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 更新标题 -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="&#xe61f;"
                                       FontFamily="{DynamicResource IconFont}"
                                       FontSize="24"
                                       Foreground="{DynamicResource SuccessBrush}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,12,0"/>
                            <TextBlock Text="发现新版本"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource PrimaryTextBrush}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- 版本信息 -->
                        <Grid Grid.Row="1" Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{Binding UpdateCheckResult.LatestVersion.Version}"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource PrimaryBrush}"/>
                                <TextBlock Text="{Binding UpdateCheckResult.LatestVersion.ReleaseDate, StringFormat='{}{0:yyyy-MM-dd}'}"
                                           FontSize="12"
                                           Foreground="{DynamicResource SecondaryTextBrush}"/>
                            </StackPanel>

                            <Button Grid.Column="2"
                                    Content="立即下载"
                                    Style="{StaticResource BaseButtonStyle}"
                                    Command="{Binding DownloadUpdateCommand}"/>
                        </Grid>

                        <!-- 新功能 -->
                        <StackPanel Grid.Row="2" Margin="0,0,0,12"
                                    Visibility="{Binding UpdateCheckResult.LatestVersion.Features.Count, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="新功能"
                                       FontSize="14"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource PrimaryTextBrush}"
                                       Margin="0,0,0,8"/>
                            <ItemsControl ItemsSource="{Binding UpdateCheckResult.LatestVersion.Features}"
                                          Style="{StaticResource FeatureListStyle}"/>
                        </StackPanel>

                        <!-- 修复内容 -->
                        <StackPanel Grid.Row="3" Margin="0,0,0,12"
                                    Visibility="{Binding UpdateCheckResult.LatestVersion.Fixes.Count, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="修复内容"
                                       FontSize="14"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource PrimaryTextBrush}"
                                       Margin="0,0,0,8"/>
                            <ItemsControl ItemsSource="{Binding UpdateCheckResult.LatestVersion.Fixes}"
                                          Style="{StaticResource FixListStyle}"/>
                        </StackPanel>

                        <!-- 文件大小 -->
                        <TextBlock Grid.Row="4"
                                   Text="{Binding UpdateCheckResult.LatestVersion.FileSize, StringFormat='下载大小: {0:N0} KB'}"
                                   FontSize="12"
                                   Foreground="{DynamicResource SecondaryTextBrush}"/>
                    </Grid>
                </Border>

                <!-- 当前版本信息 -->
                <Border Style="{StaticResource VersionCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 版本标题 -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="&#xe61c;"
                                       FontFamily="{DynamicResource IconFont}"
                                       FontSize="24"
                                       Foreground="{DynamicResource PrimaryBrush}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,12,0"/>
                            <TextBlock Text="当前版本"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource PrimaryTextBrush}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- 版本详情 -->
                        <Grid Grid.Row="1" Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{Binding CurrentVersion.Version}"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource PrimaryBrush}"/>
                                <TextBlock Text="{Binding CurrentVersion.ReleaseDate, StringFormat='发布于 {0:yyyy-MM-dd}'}"
                                           FontSize="12"
                                           Foreground="{DynamicResource SecondaryTextBrush}"/>
                            </StackPanel>
                        </Grid>

                        <!-- 当前功能 -->
                        <StackPanel Grid.Row="2" Margin="0,0,0,12"
                                    Visibility="{Binding CurrentVersion.Features.Count, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="主要功能"
                                       FontSize="14"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource PrimaryTextBrush}"
                                       Margin="0,0,0,8"/>
                            <ItemsControl ItemsSource="{Binding CurrentVersion.Features}"
                                          Style="{StaticResource FeatureListStyle}"/>
                        </StackPanel>

                        <!-- 描述 -->
                        <TextBlock Grid.Row="3"
                                   Text="{Binding CurrentVersion.Description}"
                                   FontSize="13"
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   TextWrapping="Wrap"
                                   LineHeight="20"/>
                    </Grid>
                </Border>

                <!-- 版本历史 -->
                <Border Style="{StaticResource VersionCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 历史标题 -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="&#xe61d;"
                                       FontFamily="{DynamicResource IconFont}"
                                       FontSize="24"
                                       Foreground="{DynamicResource PrimaryBrush}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,12,0"/>
                            <TextBlock Text="版本历史"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource PrimaryTextBrush}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- 历史列表 -->
                        <ItemsControl Grid.Row="1" ItemsSource="{Binding VersionHistory}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource SurfaceBrush}"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Padding="16"
                                            Margin="0,0,0,12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- 版本信息 -->
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Version}"
                                                           FontSize="14"
                                                           FontWeight="Medium"
                                                           Foreground="{DynamicResource PrimaryTextBrush}"/>
                                                <TextBlock Text="{Binding ReleaseDate, StringFormat='{}{0:yyyy-MM-dd}'}"
                                                           FontSize="11"
                                                           Foreground="{DynamicResource SecondaryTextBrush}"/>
                                            </StackPanel>

                                            <!-- 描述 -->
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding Description}"
                                                       FontSize="13"
                                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                                       VerticalAlignment="Center"
                                                       Margin="16,0"/>

                                            <!-- 预发布标记 -->
                                            <Border Grid.Column="2"
                                                    Background="{DynamicResource WarningBrush}"
                                                    CornerRadius="4"
                                                    Padding="6,2"
                                                    Visibility="{Binding IsPreRelease, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <TextBlock Text="预发布" 
                                                           Foreground="White"
                                                           FontSize="10"
                                                           FontWeight="Medium"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>

                <!-- 项目信息 -->
                <Border Style="{StaticResource VersionCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 项目标题 -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="&#xe620;"
                                       FontFamily="{DynamicResource IconFont}"
                                       FontSize="24"
                                       Foreground="{DynamicResource PrimaryBrush}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,12,0"/>
                            <TextBlock Text="项目信息"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource PrimaryTextBrush}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- 项目详情 -->
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- 开发者 -->
                            <TextBlock Grid.Row="0"
                                       Text="{Binding Developer, StringFormat='开发者: {0}'}"
                                       FontSize="14"
                                       Foreground="{DynamicResource PrimaryTextBrush}"
                                       Margin="0,0,0,8"/>

                            <!-- 版权 -->
                            <TextBlock Grid.Row="1"
                                       Text="{Binding Copyright}"
                                       FontSize="14"
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="0,0,0,16"/>

                            <!-- 链接按钮 -->
                            <StackPanel Grid.Row="2" Orientation="Horizontal">
                                <Button Content="GitHub"
                                        Style="{StaticResource FluentSecondaryButtonStyle}"
                                        Command="{Binding OpenGitHubCommand}"
                                        Margin="0,0,12,0"/>
                                <Button Content="许可证"
                                        Style="{StaticResource FluentSecondaryButtonStyle}"
                                        Command="{Binding OpenLicenseCommand}"/>
                            </StackPanel>

                            <!-- 技术栈 -->
                            <TextBlock Grid.Row="3"
                                       Text="基于 .NET 8 和 WPF 构建"
                                       FontSize="12"
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="0,16,0,0"/>
                        </Grid>
                    </Grid>
                </Border>

                <!-- 底部间距 -->
                <Border Height="32" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>