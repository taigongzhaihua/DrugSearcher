<Page x:Class="DrugSearcher.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="首页">

    <!-- 主要内容区域 -->
    <Grid Margin="20">
        <!-- 内容区域 -->
        <ScrollViewer Background="{DynamicResource SecondaryBackgroundBrush}"
                      Padding="20" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="示例内容"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource PrimaryTextBrush}"
                           Margin="0,0,0,15" />

                <TextBox Tag="这是一个示例文本框"
                         Style="{StaticResource BaseTextBoxStyle}"
                         Margin="0,0,0,10" />

                <Button Content="示例按钮"
                        Style="{StaticResource BaseButtonStyle}"
                        HorizontalAlignment="Left"
                        Margin="0,0,0,10" />

                <TextBlock Text="这是一段示例文本，用于展示不同主题下的文字颜色效果。"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           TextWrapping="Wrap"
                           Margin="0,0,0,10" />

                <Border Background="{DynamicResource SurfaceBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="15"
                        Margin="0,10,0,0">
                    <TextBlock Text="这是一个带边框的容器，展示不同主题下的背景和边框效果。"
                               Foreground="{DynamicResource PrimaryTextBrush}"
                               TextWrapping="Wrap" />
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
