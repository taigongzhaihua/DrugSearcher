<Window x:Class="DrugSearcher.Views.CalculatorGenerationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AI生成计算器" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Style="{DynamicResource BaseWindowStyle}">
    
    <Window.Resources>
        <Style x:Key="TitleTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource DefaultTextStyle}">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>
        
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock" BasedOn="{StaticResource DefaultTextStyle}">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="GroupBoxStyle" TargetType="GroupBox" BasedOn="{StaticResource BaseGroupBoxStyle}">
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

    </Window.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0" 
                   Text="AI生成药物计算器" 
                   Style="{StaticResource TitleTextBlockStyle}"/>

        <!-- 计算器类型选择 -->
        <GroupBox Grid.Row="1" Header="计算器类型" Margin="0,0,0,15"
                  Style="{StaticResource GroupBoxStyle}">
            <StackPanel Margin="10" Orientation="Horizontal" HorizontalAlignment="Stretch">
                <TextBlock Text="请选择要生成的计算器类型:" 
                           Style="{StaticResource SectionHeaderStyle}"
                           Margin="10,0"/>
                
                <ComboBox x:Name="CalculatorTypeComboBox"
                          Style="{DynamicResource FluentComboBoxStyle}"
                          SelectedIndex="0" HorizontalAlignment="Stretch"
                          Margin="0,5,0,0"
                          Height="35"
                          FontSize="14">
                    <ComboBoxItem Content="通用剂量计算器"/>
                    <ComboBoxItem Content="儿童剂量计算器"/>
                    <ComboBoxItem Content="成人剂量计算器"/>
                    <ComboBoxItem Content="老年人剂量计算器"/>
                    <ComboBoxItem Content="肾功能不全剂量计算器"/>
                    <ComboBoxItem Content="肝功能不全剂量计算器"/>
                    <ComboBoxItem Content="孕妇剂量计算器"/>
                    <ComboBoxItem Content="哺乳期剂量计算器"/>
                    <ComboBoxItem Content="特殊人群剂量计算器"/>
                </ComboBox>
            </StackPanel>
        </GroupBox>

        <!-- 额外要求 -->
        <GroupBox Grid.Row="2" Header="额外要求" Margin="0,0,0,15"
                  Style="{StaticResource GroupBoxStyle}">
            <StackPanel Margin="10">
                <TextBlock Text="请输入特殊要求或说明 (可选):" 
                           Style="{StaticResource SectionHeaderStyle}"/>
                
                <TextBox x:Name="AdditionalRequirementsTextBox"
                         Height="80"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Style="{DynamicResource BaseTextBoxStyle}"
                         Tag="例如：考虑药物相互作用、特定疾病状态调整、特殊给药方式等"
                         VerticalAlignment="Top"
                         VerticalScrollBarVisibility="Auto"
                         VerticalContentAlignment="Top"
                         Margin="0,5,0,0"
                         FontSize="14"/>
            </StackPanel>
        </GroupBox>

        <!-- 说明信息 -->
        <GroupBox Grid.Row="3" Header="使用说明" Margin="0,0,0,20"
                  Style="{StaticResource GroupBoxStyle}">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10">
                <TextBlock TextWrapping="Wrap" 
                           FontSize="12"
                           LineHeight="18"
                           Foreground="DarkSlateGray">
                    <Run Text="• " FontWeight="Bold"/>
                    <Run Text="AI将根据药物信息和您的要求自动生成计算器"/>
                    <LineBreak/>
                    <Run Text="• " FontWeight="Bold"/>
                    <Run Text="生成的计算器包含参数定义和计算逻辑"/>
                    <LineBreak/>
                    <Run Text="• " FontWeight="Bold"/>
                    <Run Text="请仔细检查生成的计算器，确保符合临床要求"/>
                    <LineBreak/>
                    <Run Text="• " FontWeight="Bold"/>
                    <Run Text="可以在生成后进行手动调整和完善"/>
                    <LineBreak/>
                    <Run Text="• " FontWeight="Bold"/>
                    <Run Text="建议在临床使用前进行充分的测试验证"/>
                    <LineBreak/>
                    <Run Text="• " FontWeight="Bold"/>
                    <Run Text="生成过程可能需要几秒钟，请耐心等待"/>
                </TextBlock>
            </ScrollViewer>
        </GroupBox>

        <!-- 按钮 -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="取消" 
                    Click="CancelButton_Click"
                    Style="{StaticResource TransparentThemeButtonStyle}"
                    Margin="0,0,10,0"/>
            <Button Content="生成计算器" 
                    Click="GenerateButton_Click"
                    Style="{StaticResource BaseButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>