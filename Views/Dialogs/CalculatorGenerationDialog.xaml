<Window x:Class="DrugSearcher.Views.CalculatorGenerationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:behaviors="clr-namespace:DrugSearcher.Behaviors"
        Title="AI生成计算器" Height="650" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Style="{DynamicResource BaseWindowStyle}"
        behaviors:ThemeBehavior.Background="{DynamicResource BackgroundBrush}">

    <Window.Resources>
        <Style x:Key="TitleTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource DefaultTextStyle}">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Foreground" Value="{DynamicResource Heading3Brush}"/>
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock" BasedOn="{StaticResource DefaultTextStyle}">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Foreground" Value="{DynamicResource Heading5Brush}"/>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CardBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Effect" Value="{StaticResource CardShadowEffect}"/>
        </Style>

    </Window.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0" 
                   Text="AI生成药物计算器" 
                   Style="{StaticResource TitleTextBlockStyle}"/>

        <!-- 计算器类型选择 -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}">
            <StackPanel>
                <TextBlock Text="计算器类型" 
                           Style="{StaticResource SectionHeaderStyle}"
                           Margin="0,0,0,10"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="请选择要生成的计算器类型:" 
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               Margin="0,0,15,0"/>

                    <ComboBox Grid.Column="1"
                              x:Name="CalculatorTypeComboBox"
                              Style="{DynamicResource FluentComboBoxStyle}"
                              SelectedIndex="0">
                        <ComboBoxItem Content="通用剂量计算器"/>
                        <ComboBoxItem Content="儿童剂量计算器"/>
                        <ComboBoxItem Content="成人剂量计算器"/>
                        <ComboBoxItem Content="老年人剂量计算器"/>
                        <ComboBoxItem Content="肾功能不全剂量计算器"/>
                        <ComboBoxItem Content="肝功能不全剂量计算器"/>
                        <ComboBoxItem Content="孕妇剂量计算器"/>
                        <ComboBoxItem Content="哺乳期剂量计算器"/>
                        <ComboBoxItem Content="特殊人群剂量计算器"/>
                    </ComboBox>
                </Grid>
            </StackPanel>
        </Border>

        <!-- 额外要求 -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}">
            <StackPanel>
                <TextBlock Text="额外要求" 
                           Style="{StaticResource SectionHeaderStyle}"
                           Margin="0,0,0,10"/>

                <TextBlock Text="请输入特殊要求或说明 (可选):" 
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           Margin="0,0,0,5"/>

                <TextBox x:Name="AdditionalRequirementsTextBox"
                         Height="80"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Style="{DynamicResource BaseTextBoxStyle}"
                         Tag="例如：考虑药物相互作用、特定疾病状态调整、特殊给药方式等"
                         VerticalAlignment="Top"
                         VerticalScrollBarVisibility="Auto"
                         VerticalContentAlignment="Top"
                         FontSize="14"/>
            </StackPanel>
        </Border>

        <!-- 说明信息 -->
        <Border Grid.Row="3" 
                Background="{DynamicResource InfoCardBackgroundBrush}"
                BorderBrush="{DynamicResource InfoCardBorderBrush}"
                BorderThickness="1"
                CornerRadius="6"
                Padding="15"
                Margin="0,0,0,20"
                Effect="{StaticResource CardShadowEffect}">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="&#xe61e;"
                               FontFamily="{DynamicResource IconFont}"
                               FontSize="18"
                               Foreground="{DynamicResource InfoBrush}"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <TextBlock Text="使用说明" 
                               Style="{StaticResource SectionHeaderStyle}"
                               Foreground="{DynamicResource InfoTextBrush}"/>
                </StackPanel>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock TextWrapping="Wrap" 
                               FontSize="12"
                               LineHeight="20"
                               Foreground="{DynamicResource InfoTextBrush}">
                        <Run Text="• " FontWeight="Bold"/>
                        <Run Text="AI将根据药物信息和您的要求自动生成计算器"/>
                        <LineBreak/>
                        <Run Text="• " FontWeight="Bold"/>
                        <Run Text="生成的计算器包含参数定义和计算逻辑"/>
                        <LineBreak/>
                        <Run Text="• " FontWeight="Bold"/>
                        <Run Text="请仔细检查生成的计算器，确保符合临床要求"/>
                        <LineBreak/>
                        <Run Text="• " FontWeight="Bold"/>
                        <Run Text="可以在生成后进行手动调整和完善"/>
                        <LineBreak/>
                        <Run Text="• " FontWeight="Bold"/>
                        <Run Text="建议在临床使用前进行充分的测试验证"/>
                        <LineBreak/>
                        <Run Text="• " FontWeight="Bold"/>
                        <Run Text="生成过程可能需要几秒钟，请耐心等待"/>
                    </TextBlock>
                </ScrollViewer>
            </StackPanel>
        </Border>

        <!-- 按钮 -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="取消" 
                    Click="CancelButton_Click"
                    Style="{StaticResource TransparentThemeButtonStyle}"
                    Margin="0,0,10,0"/>
            <Button Content="生成计算器" 
                    Click="GenerateButton_Click"
                    Style="{StaticResource BaseButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>