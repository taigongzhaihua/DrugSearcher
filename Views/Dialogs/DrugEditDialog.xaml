<Window x:Class="DrugSearcher.Views.DrugEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:DrugSearcher.ViewModels"
        xmlns:converters="clr-namespace:DrugSearcher.Converters" 
        xmlns:behaviors="clr-namespace:DrugSearcher.Behaviors"
        mc:Ignorable="d"
        Title="{Binding IsEditMode, Converter={x:Static converters:Converters.EditModeToTitleConverter}, FallbackValue=药物信息}"
        Height="750"
        Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        ShowInTaskbar="False"
        behaviors:ThemeBehavior.Background="{DynamicResource WindowBackgroundBrush}"
        d:DataContext="{d:DesignInstance viewModels:DrugEditDialogViewModel}">

    <Grid>
        <!-- 对话框标题 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0"
                   Text="{Binding IsEditMode, Converter={x:Static converters:Converters.EditModeToTitleConverter}}"
                   FontSize="20"
                   FontWeight="Medium"
                   Foreground="{DynamicResource PrimaryBrush}"
                   Margin="24" />

        <!-- 表单内容 -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalContentAlignment="Center"
                      Padding="24">
            <StackPanel MaxWidth="600" HorizontalAlignment="Stretch">
                <!-- 基本信息 -->
                <TextBlock Text="基本信息"
                           FontSize="16"
                           FontWeight="Medium"
                           Foreground="{DynamicResource PrimaryTextBrush}"
                           Margin="0,0,0,12" />

                <Border Background="{DynamicResource BackgroundBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16"
                        Margin="16,16,16,24"
                        Effect="{DynamicResource DropShadowEffect}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- 药物名称 -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="药物名称 *" Style="{DynamicResource FormLabelStyle}" />
                            <TextBox
                                Text="{Binding DrugName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, FallbackValue=''}"
                                Style="{DynamicResource FormTextBoxStyle}" />
                        </StackPanel>

                        <!-- 通用名称 -->
                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="8,0,0,0">
                            <TextBlock Text="通用名称" Style="{DynamicResource FormLabelStyle}" />
                            <TextBox
                                Text="{Binding GenericName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, FallbackValue=''}"
                                Style="{DynamicResource FormTextBoxStyle}" />
                        </StackPanel>

                        <!-- 规格 -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="规格" Style="{DynamicResource FormLabelStyle}" />
                            <TextBox
                                Text="{Binding Specification, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, FallbackValue=''}"
                                Style="{DynamicResource FormTextBoxStyle}" />
                        </StackPanel>

                        <!-- 生产厂家 -->
                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="8,0,0,0">
                            <TextBlock Text="生产厂家" Style="{DynamicResource FormLabelStyle}" />
                            <TextBox
                                Text="{Binding Manufacturer, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, FallbackValue=''}"
                                Style="{DynamicResource FormTextBoxStyle}" />
                        </StackPanel>

                        <!-- 批准文号 -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
                            <TextBlock Text="批准文号" Style="{DynamicResource FormLabelStyle}" />
                            <TextBox
                                Text="{Binding ApprovalNumber, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, FallbackValue=''}"
                                Style="{DynamicResource FormTextBoxStyle}" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- 中医信息 -->
                <TextBlock Text="中医信息"
                           FontSize="16"
                           FontWeight="Medium"
                           Foreground="{DynamicResource PrimaryTextBrush}"
                           Margin="0,0,0,12" />

                <Border Background="{DynamicResource BackgroundBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16"
                        Margin="16,16,16,24"
                        Effect="{DynamicResource DropShadowEffect}">
                    <Grid>

                        <!-- 中医病名 -->
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="中医病名" Style="{DynamicResource FormLabelStyle}"
                                   Grid.Column="0" Grid.Row="0"
                                   Margin="0,0,8,8" />
                        <TextBox
                            Text="{Binding TcmDisease, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, FallbackValue=''}"
                            Style="{DynamicResource FormTextBoxStyle}"
                            Grid.Column="0" Grid.Row="1"
                            Margin="0,0,8,0" />

                        <!-- 中医辨病辨证 -->
                        <TextBlock Text="中医辨病辨证" Style="{DynamicResource FormLabelStyle}"
                                   Grid.Column="1" Grid.Row="0"
                                   Margin="8,0,0,8" />
                        <TextBox
                            Text="{Binding TcmSyndrome, UpdateSourceTrigger=PropertyChanged, FallbackValue=''}"
                            Style="{DynamicResource FormTextBoxStyle}"
                            Grid.Column="1" Grid.Row="1"
                            Margin="8,0,0,0" />

                    </Grid>
                </Border>

                <!-- 药物详情 -->
                <TextBlock Text="药物详情"
                           FontSize="16"
                           FontWeight="Medium"
                           Foreground="{DynamicResource PrimaryTextBrush}"/>

                <Border Background="{DynamicResource BackgroundBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16"
                        Margin="16,16,16,24"
                        Effect="{DynamicResource DropShadowEffect}">
                    <StackPanel>
                        <!-- 适应症 -->
                        <TextBlock Text="适应症" Style="{DynamicResource FormLabelStyle}" />
                        <TextBox
                            Text="{Binding Indications, UpdateSourceTrigger=PropertyChanged, FallbackValue=''}"
                            Style="{DynamicResource FormTextAreaStyle}" />

                        <!-- 用法用量 -->
                        <TextBlock Text="用法用量" Style="{DynamicResource FormLabelStyle}" />
                        <TextBox Text="{Binding Dosage, UpdateSourceTrigger=PropertyChanged, FallbackValue=''}"
                                 Style="{DynamicResource FormTextAreaStyle}" />

                        <!-- 药物说明 -->
                        <TextBlock Text="药物说明" Style="{DynamicResource FormLabelStyle}" />
                        <TextBox
                            Text="{Binding Description, UpdateSourceTrigger=PropertyChanged, FallbackValue=''}"
                            Style="{DynamicResource FormTextAreaStyle}" />

                        <!-- 不良反应 -->
                        <TextBlock Text="不良反应" Style="{DynamicResource FormLabelStyle}" />
                        <TextBox
                            Text="{Binding SideEffects, UpdateSourceTrigger=PropertyChanged, FallbackValue=''}"
                            Style="{DynamicResource FormTextAreaStyle}" />

                        <!-- 注意事项 -->
                        <TextBlock Text="注意事项" Style="{DynamicResource FormLabelStyle}" />
                        <TextBox
                            Text="{Binding Precautions, UpdateSourceTrigger=PropertyChanged, FallbackValue=''}"
                            Style="{DynamicResource FormTextAreaStyle}" />

                        <!-- 备注 -->
                        <TextBlock Text="备注" Style="{DynamicResource FormLabelStyle}" />
                        <TextBox
                            Text="{Binding Remarks, UpdateSourceTrigger=PropertyChanged, FallbackValue=''}"
                            Style="{DynamicResource FormTextAreaStyle}" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- 按钮区域 -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="24,16">
            <Button Content="保存"
                    Style="{DynamicResource PrimaryButtonStyle}"
                    Command="{Binding SaveCommand}"
                    Click="SaveButton_Click"
                    Margin="0,0,8,0"
                    VerticalAlignment="Center" />

            <Button Content="取消"
                    Style="{DynamicResource SecondaryButtonStyle}"
                    Click="CancelButton_Click"
                    VerticalAlignment="Center" />
        </StackPanel>
    </Grid>

</Window>