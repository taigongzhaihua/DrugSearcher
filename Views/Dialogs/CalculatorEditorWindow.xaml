<Window x:Class="DrugSearcher.Views.CalculatorEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
        xmlns:vm="clr-namespace:DrugSearcher.ViewModels" 
        xmlns:behaviors="clr-namespace:DrugSearcher.Behaviors"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Style="{DynamicResource BaseWindowStyle}"
        Background="{DynamicResource SurfaceBrush}"
        WindowState="Maximized"
        MinHeight="600" MinWidth="1000" 
        d:DataContext="{vm:CalculatorEditorViewModel}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
        </Style>

        <Style x:Key="ToolButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>
    </Window.Resources>

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 头部基本信息 -->
        <Border Grid.Row="0" 
                behaviors:ThemeBehavior.Background="{DynamicResource BackgroundBrush}" 
                Padding="15,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="计算器名称:" FontWeight="Bold" Margin="0,0,10,0"
                           Style="{DynamicResource DefaultTextStyle}" LineHeight="Auto"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding CalculatorName}" Margin="0,0,20,0"
                         Style="{DynamicResource BaseTextBoxStyle}"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="描述:" VerticalAlignment="Top" FontWeight="Bold" Margin="0,18,10,0"
                           Style="{DynamicResource DefaultTextStyle}" LineHeight="Auto"/>
                <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding Description}" TextWrapping="Wrap" 
                         AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="0,5,0,0"
                         Style="{DynamicResource BaseTextBoxStyle}"/>
            </Grid>
        </Border>

        <!-- 主要编辑区域 -->
        <Grid Grid.Row="1" Margin="10,0,10,10" Background="{DynamicResource SurfaceBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="600"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧：代码编辑器 -->
            <GroupBox Grid.Column="0" Header="JavaScript 代码编辑器" 
                      Style="{DynamicResource BaseGroupBoxStyle}" Background="{DynamicResource SurfaceBrush}"
                      Margin="0,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 代码工具栏 -->
                    <Border Grid.Row="0" 
                            behaviors:ThemeBehavior.Background="{DynamicResource SurfaceBrush}" 
                            Padding="8,5">
                        <WrapPanel>
                            <Button Content="插入模板" Command="{Binding InsertCodeTemplateCommand}" Style="{StaticResource ToolButtonStyle}"/>
                            <Button Content="插入参数" Command="{Binding InsertParameterCodeCommand}" Style="{StaticResource ToolButtonStyle}"
                                    IsEnabled="{Binding SelectedParameter, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <Separator Width="10"/>
                            <Button Content="验证语法" Command="{Binding ValidateCodeCommand}" Style="{StaticResource ToolButtonStyle}"/>
                            <Button Content="测试运行" Command="{Binding TestCalculatorCommand}" Style="{StaticResource ToolButtonStyle}"/>
                            <Separator Width="10"/>
                            <Button Content="清空" Command="{Binding ClearCodeCommand}" Style="{StaticResource ToolButtonStyle}"/>
                            <Button Content="重置" Command="{Binding ResetToDefaultCommand}" Style="{StaticResource ToolButtonStyle}"/>
                        </WrapPanel>
                    </Border>

                    <!-- AvalonEdit 代码编辑器 -->
                    <avalonedit:TextEditor Grid.Row="1" 
                                           x:Name="CodeEditor"
                                           Document="{Binding CodeDocument}"
                                           FontFamily="Consolas, Monaco, 'Courier New'"
                                           SyntaxHighlighting="JavaScript"
                                           FontSize="14"
                                           Padding="10,0,0,0"
                                           LineNumbersForeground="{DynamicResource PrimaryTextBrush}"
                                           ShowLineNumbers="True"
                                           WordWrap="True"
                                           HorizontalScrollBarVisibility="Auto"
                                           VerticalScrollBarVisibility="Auto"
                                           behaviors:ThemeBehavior.Background="{DynamicResource BackgroundBrush}" 
                                           Foreground="{DynamicResource PrimaryTextBrush}"
                                           BorderBrush="{DynamicResource BorderBrush}"
                                           BorderThickness="0,1"
                                           Margin="0,2,0,2"/>

                    <!-- 状态栏部分 -->
                    <Border Grid.Row="2" Background="{DynamicResource SurfaceBrush}" Padding="8,6">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- 状态消息 -->
                            <TextBlock Grid.Column="0" 
                                       Text="{Binding StatusMessage}" 
                                       TextWrapping="Wrap"
                                       FontSize="11"
                                       Style="{DynamicResource DefaultTextStyle}"
                                       LineHeight="Auto"/>

                            <!-- 语法状态 -->
                            <TextBlock Grid.Column="1" 
                                       x:Name="SyntaxStatusText"
                                       Text="语法检测中..."
                                       FontSize="10"
                                       Style="{DynamicResource DefaultTextStyle}"
                                       LineHeight="Auto"
                                       Margin="10,0,10,0"
                                       Opacity="0.8"/>

                            <!-- 代码提示提示 -->
                            <TextBlock Grid.Column="2" 
                                       Text="Ctrl+Space: 代码提示" 
                                       FontSize="10"
                                       Style="{DynamicResource DefaultTextStyle}"
                                       LineHeight="Auto"
                                       Opacity="0.7"/>
                        </Grid>
                    </Border>
                </Grid>
            </GroupBox>

            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="Transparent" ResizeBehavior="PreviousAndNext"/>

            <!-- 右侧：参数管理 -->
            <GroupBox Grid.Column="2" Header="参数管理" Style="{DynamicResource BaseGroupBoxStyle}" 
                      Background="{DynamicResource SurfaceBrush}"
                      BorderBrush="{DynamicResource BorderBrush}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 参数操作工具栏 -->
                    <Border Grid.Row="0" 
                            behaviors:ThemeBehavior.Background="{DynamicResource SurfaceBrush}" 
                            Padding="8,5">
                        <WrapPanel HorizontalAlignment="Right">
                            <Button Content="添加" Command="{Binding AddParameterCommand}" Style="{StaticResource WarningButtonStyle}"/>
                            <Button Content="删除" Command="{Binding RemoveParameterCommand}" Style="{StaticResource DangerButtonStyle}"
                                    IsEnabled="{Binding SelectedParameter, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <Button Content="复制" Command="{Binding DuplicateParameterCommand}" Style="{StaticResource SuccessButtonStyle}"
                                    IsEnabled="{Binding SelectedParameter, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <Button Content="↑" Command="{Binding MoveParameterUpCommand}" Style="{StaticResource TransparentThemeButtonStyle}" Width="30"
                                    IsEnabled="{Binding SelectedParameter, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <Button Content="↓" Command="{Binding MoveParameterDownCommand}" Style="{StaticResource TransparentThemeButtonStyle}" Width="30"
                                    IsEnabled="{Binding SelectedParameter, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        </WrapPanel>
                    </Border>

                    <!-- 参数DataGrid -->
                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding Parameters}" 
                              SelectedItem="{Binding SelectedParameter}"
                              CanUserResizeRows="False"
                              GridLinesVisibility="All"
                              behaviors:ThemeBehavior.Background="{DynamicResource BackgroundBrush}"
                              Style="{StaticResource ModernDataGridStyle}"
                              RowStyle="{StaticResource DataGridRowStyle}"
                              ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                              Margin="0,2,0,2"
                              BorderThickness="0,1">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="参数名" Binding="{Binding Name}" Width="80"/>
                            <DataGridTextColumn Header="显示名称" Binding="{Binding DisplayName}" Width="100"/>
                            <DataGridComboBoxColumn Header="类型" 
                                                    SelectedItemBinding="{Binding DataTypeName}"
                                                    Width="80">
                                <DataGridComboBoxColumn.ElementStyle>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="ItemsSource" Value="{x:Static vm:DosageParameterViewModel.DataTypeOptions}"/>
                                    </Style>
                                </DataGridComboBoxColumn.ElementStyle>
                                <DataGridComboBoxColumn.EditingElementStyle>
                                    <Style TargetType="ComboBox" BasedOn="{StaticResource FluentComboBoxStyle}">
                                        <Setter Property="ItemsSource" Value="{x:Static vm:DosageParameterViewModel.DataTypeOptions}"/>
                                    </Style>
                                </DataGridComboBoxColumn.EditingElementStyle>
                            </DataGridComboBoxColumn>
                            <DataGridTextColumn Header="单位" Binding="{Binding Unit}" Width="50"/>
                            <DataGridCheckBoxColumn Header="必填" Binding="{Binding IsRequired}" Width="50"/>
                            <DataGridTextColumn Header="默认值" Binding="{Binding DefaultValueString}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- 参数详情编辑 -->
                    <ScrollViewer Grid.Row="2" MaxHeight="300" VerticalScrollBarVisibility="Auto">
                        <Expander Header="参数详情" IsExpanded="True" Margin="5" 
                                  Foreground="{DynamicResource PrimaryTextBrush}"
                                  FontSize="20" FontWeight="Bold">
                            <Grid DataContext="{Binding SelectedParameter}" Margin="5,10">
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding}" Value="{x:Null}">
                                                <Setter Property="IsEnabled" Value="False"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="描述:" FontWeight="Bold" Margin="0,12,5,5"
                                           Style="{DynamicResource DefaultTextStyle}" LineHeight="Auto" VerticalAlignment="Top"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Description}" TextWrapping="Wrap" 
                                         AcceptsReturn="True" Margin="0,0,0,5" FontSize="11" VerticalAlignment="Top"
                                         Style="{DynamicResource BaseTextBoxStyle}"/>

                                <!-- 数字类型特有属性 -->
                                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                                            Visibility="{Binding IsNumberType, Converter={StaticResource BooleanToVisibilityConverter}}"
                                            Margin="0,5">
                                    <TextBlock Text="数值范围:" FontWeight="Bold" Margin="0,0,0,12"
                                               Style="{DynamicResource DefaultTextStyle}" LineHeight="Auto"
                                               FontSize="20"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="最小值:" Margin="0,0,5,0"
                                                   Style="{DynamicResource DefaultTextStyle}" LineHeight="Auto"/>
                                        <TextBox Grid.Column="1" Text="{Binding MinValueString}" Margin="0,0,10,0"
                                                 Style="{DynamicResource BaseTextBoxStyle}"/>
                                        <TextBlock Grid.Column="2" Text="最大值:" Margin="0,0,5,0"
                                                   Style="{DynamicResource DefaultTextStyle}" LineHeight="Auto"/>
                                        <TextBox Grid.Column="3" Text="{Binding MaxValueString}"
                                                 Style="{DynamicResource BaseTextBoxStyle}"/>
                                    </Grid>
                                </StackPanel>

                                <!-- 选择类型特有属性 -->
                                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                                            Visibility="{Binding IsSelectType, Converter={StaticResource BooleanToVisibilityConverter}}"
                                            Margin="0,5">
                                    <TextBlock Text="选项 (用逗号分隔):" FontWeight="Bold" Margin="0,0,0,8"
                                               Style="{DynamicResource DefaultTextStyle}" LineHeight="Auto"/>
                                    <TextBox Text="{Binding OptionsText}" Height="40" TextWrapping="Wrap" 
                                             AcceptsReturn="True" FontSize="11"
                                             Style="{DynamicResource BaseTextBoxStyle}"/>
                                </StackPanel>
                            </Grid>
                        </Expander>
                    </ScrollViewer>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- 底部按钮栏 -->
        <Border Grid.Row="2" Background="{DynamicResource BackgroundBrush}" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 进度指示器 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <ProgressBar Width="20" Height="20" IsIndeterminate="True" Margin="0,0,10,0"
                                 Visibility="{Binding IsTesting, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <ProgressBar Width="20" Height="20" IsIndeterminate="True" Margin="0,0,10,0"
                                 Visibility="{Binding IsSaving, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <TextBlock Text="测试中..." FontStyle="Italic" Style="{DynamicResource DefaultTextStyle}" LineHeight="Auto"
                               Visibility="{Binding IsTesting, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <TextBlock Text="保存中..." FontStyle="Italic" Style="{DynamicResource DefaultTextStyle}" LineHeight="Auto"
                               Visibility="{Binding IsSaving, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>

                <!-- 操作按钮 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,30,0">
                    <Button Content="测试计算器" 
                            Command="{Binding TestCalculatorCommand}" 
                            Style="{StaticResource WarningButtonStyle}"
                            IsEnabled="{Binding IsTesting, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Margin="10"/>
                    <Button Content="{Binding SaveButtonText}" 
                            Command="{Binding SaveCalculatorCommand}" 
                            Style="{StaticResource SuccessButtonStyle}"
                            IsEnabled="{Binding IsSaving, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Margin="10"/>
                    <Button Content="取消" 
                            Click="CancelButton_Click" 
                            Style="{StaticResource TransparentThemeButtonStyle}"
                            Margin="10"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>