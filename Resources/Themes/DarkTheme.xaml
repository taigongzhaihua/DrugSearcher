<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- 深色模式背景和文字 -->
    <Color x:Key="BackgroundColor">#121212</Color>
    <Color x:Key="SurfaceColor">#1E1E1E</Color>
    <Color x:Key="SecondaryBackgroundColor">#2C2C2C</Color>

    <Color x:Key="PrimaryTextColor">#FFFFFF</Color>
    <Color x:Key="SecondaryTextColor">#B3B3B3</Color>
    <Color x:Key="DisabledTextColor">#666666</Color>

    <Color x:Key="BorderColor">#404040</Color>
    <Color x:Key="DividerColor">#404040</Color>

    <Color x:Key="SuccessColor">#66BB6A</Color>
    <Color x:Key="WarningColor">#FFA726</Color>
    <Color x:Key="ErrorColor">#EF5350</Color>

    <!-- 添加缺失的颜色定义 -->
    <Color x:Key="DisabledColor">#2A2A2A</Color>
    <Color x:Key="HoverColor">#3A3A3A</Color>
    <Color x:Key="PressedColor">#1A1A1A</Color>
    <Color x:Key="ScrollBarColor">#555555</Color>
    <Color x:Key="ScrollBarHoverColor">#777777</Color>

    <!-- DataGrid 相关颜色 -->
    <Color x:Key="DataGridTextColor">#FFFFFF</Color>
    <Color x:Key="DataGridSelectedTextColor">#FFFFFF</Color>
    <Color x:Key="DataGridAlternateRowColor">#252525</Color>

    <!-- 背景色 -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="{StaticResource SecondaryBackgroundColor}"/>

    <!-- 文字色 -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>
    <SolidColorBrush x:Key="DisabledTextBrush" Color="{StaticResource DisabledTextColor}"/>

    <!-- 边框色 -->
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="DividerBrush" Color="{StaticResource DividerColor}"/>
    <SolidColorBrush x:Key="FocusBorderBrush" Color="{StaticResource PrimaryLightColor}"/>

    <!-- 主题色 -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryLightColor}"/>
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="{StaticResource PrimaryDarkHoverColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentLightColor}"/>

    <!-- 状态色 -->
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>

    <!-- 添加缺失的画刷定义 -->
    <SolidColorBrush x:Key="DisabledBrush" Color="{StaticResource DisabledColor}"/>
    <SolidColorBrush x:Key="HoverBrush" Color="{StaticResource HoverColor}"/>
    <SolidColorBrush x:Key="PressedBrush" Color="{StaticResource PressedColor}"/>
    <SolidColorBrush x:Key="PrimaryPressedBrush" Color="{StaticResource PrimaryDarkColor}"/>
    <SolidColorBrush x:Key="ScrollBarBrush" Color="{StaticResource ScrollBarColor}"/>
    <SolidColorBrush x:Key="ScrollBarHoverBrush" Color="{StaticResource ScrollBarHoverColor}"/>

    <!-- 画刷 -->
    <SolidColorBrush x:Key="DataGridTextBrush" Color="{StaticResource DataGridTextColor}"/>
    <SolidColorBrush x:Key="DataGridSelectedTextBrush" Color="{StaticResource DataGridSelectedTextColor}"/>
    <SolidColorBrush x:Key="DataGridAlternateRowBrush" Color="{StaticResource DataGridAlternateRowColor}"/>
</ResourceDictionary>