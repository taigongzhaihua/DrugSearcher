<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- 深色模式背景和文字 -->
    <Color x:Key="BackgroundColor">#121212</Color>
    <Color x:Key="SurfaceColor">#1E1E1E</Color>
    <Color x:Key="SecondaryBackgroundColor">#2C2C2C</Color>

    <Color x:Key="PrimaryTextColor">#FFFFFF</Color>
    <Color x:Key="SecondaryTextColor">#B3B3B3</Color>
    <Color x:Key="DisabledTextColor">#666666</Color>

    <Color x:Key="BorderColor">#404040</Color>
    <Color x:Key="DividerColor">#404040</Color>

    <!-- 控件状态颜色 -->
    <Color x:Key="DisabledColor">#2A2A2A</Color>
    <Color x:Key="HoverColor">#3A3A3A</Color>
    <Color x:Key="PressedColor">#1A1A1A</Color>
    <Color x:Key="ScrollBarColor">#555555</Color>
    <Color x:Key="ScrollBarHoverColor">#777777</Color>

    <!-- DataGrid 相关颜色 -->
    <Color x:Key="DataGridTextColor">#FFFFFF</Color>
    <Color x:Key="DataGridSelectedTextColor">#FFFFFF</Color>
    <Color x:Key="DataGridAlternateRowColor">#252525</Color>

    <!-- 1. 窗体背景 -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <LinearGradientBrush x:Key="WindowGradientBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#121212" Offset="0"/>
        <GradientStop Color="#1A1A1A" Offset="1"/>
    </LinearGradientBrush>
    <RadialGradientBrush x:Key="WindowRadialBackgroundBrush" Center="0.5,0" RadiusX="1" RadiusY="1">
        <GradientStop Color="#1E1E1E" Offset="0"/>
        <GradientStop Color="#121212" Offset="1"/>
    </RadialGradientBrush>

    <!-- 2. 控件样式 - 引用主题颜色 -->
    <!-- 透明型控件 -->
    <SolidColorBrush x:Key="TransparentControlBackgroundBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="TransparentControlBorderBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="TransparentControlForegroundBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="TransparentControlHoverBackgroundBrush" Color="#10FFFFFF"/>
    <SolidColorBrush x:Key="TransparentControlHoverBorderBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="TransparentControlHoverForegroundBrush" Color="{DynamicResource PrimaryLightColor}"/>
    <SolidColorBrush x:Key="TransparentControlPressedBackgroundBrush" Color="#20FFFFFF"/>
    <SolidColorBrush x:Key="TransparentControlPressedBorderBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="TransparentControlPressedForegroundBrush" Color="{DynamicResource PrimaryColor}"/>
    <SolidColorBrush x:Key="TransparentControlDisabledBackgroundBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="TransparentControlDisabledBorderBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="TransparentControlDisabledForegroundBrush" Color="{StaticResource DisabledTextColor}"/>

    <!-- 默认型控件 -->
    <SolidColorBrush x:Key="DefaultControlBackgroundBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="DefaultControlBorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="DefaultControlForegroundBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="DefaultControlHoverBackgroundBrush" Color="{StaticResource HoverColor}"/>
    <SolidColorBrush x:Key="DefaultControlPressedBackgroundBrush" Color="{StaticResource PressedColor}"/>
    <SolidColorBrush x:Key="DefaultControlDisabledBackgroundBrush" Color="{StaticResource DisabledColor}"/>
    <SolidColorBrush x:Key="DefaultControlDisabledBorderBrush" Color="#2A2A2A"/>
    <SolidColorBrush x:Key="DefaultControlDisabledForegroundBrush" Color="{StaticResource DisabledTextColor}"/>

    <!-- 强调型控件 - 引用主题颜色 -->
    <SolidColorBrush x:Key="PrimaryControlBackgroundBrush" Color="{DynamicResource PrimaryLightColor}"/>
    <SolidColorBrush x:Key="PrimaryControlBorderBrush" Color="{DynamicResource PrimaryLightColor}"/>
    <SolidColorBrush x:Key="PrimaryControlForegroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="PrimaryControlHoverBackgroundBrush" Color="{DynamicResource PrimaryDarkHoverColor}"/>
    <SolidColorBrush x:Key="PrimaryControlPressedBackgroundBrush" Color="{DynamicResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryControlDisabledBackgroundBrush" Color="#3A3A3A"/>
    <SolidColorBrush x:Key="PrimaryControlDisabledBorderBrush" Color="#3A3A3A"/>
    <SolidColorBrush x:Key="PrimaryControlDisabledForegroundBrush" Color="#666666"/>

    <!-- 次要强调型控件 - 引用主题颜色 -->
    <SolidColorBrush x:Key="SecondaryControlBackgroundBrush" Color="{DynamicResource SecondaryLightColor}"/>
    <SolidColorBrush x:Key="SecondaryControlBorderBrush" Color="{DynamicResource SecondaryLightColor}"/>
    <SolidColorBrush x:Key="SecondaryControlForegroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SecondaryControlHoverBackgroundBrush" Color="{DynamicResource SecondaryColor}"/>
    <SolidColorBrush x:Key="SecondaryControlHoverBorderBrush" Color="{DynamicResource SecondaryColor}"/>
    <SolidColorBrush x:Key="SecondaryControlHoverForegroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SecondaryControlPressedBackgroundBrush" Color="{DynamicResource SecondaryDarkColor}"/>
    <SolidColorBrush x:Key="SecondaryControlPressedBorderBrush" Color="{DynamicResource SecondaryDarkColor}"/>
    <SolidColorBrush x:Key="SecondaryControlPressedForegroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SecondaryControlDisabledBackgroundBrush" Color="#3A3A3A"/>
    <SolidColorBrush x:Key="SecondaryControlDisabledBorderBrush" Color="#3A3A3A"/>
    <SolidColorBrush x:Key="SecondaryControlDisabledForegroundBrush" Color="#666666"/>

    <!-- 边框型控件 -->
    <SolidColorBrush x:Key="BorderControlBackgroundBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="BorderControlBorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="BorderControlForegroundBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="BorderControlHoverBackgroundBrush" Color="#08FFFFFF"/>
    <SolidColorBrush x:Key="BorderControlHoverBorderBrush" Color="{DynamicResource PrimaryLightColor}"/>
    <SolidColorBrush x:Key="BorderControlHoverForegroundBrush" Color="{DynamicResource PrimaryLightColor}"/>
    <SolidColorBrush x:Key="BorderControlPressedBackgroundBrush" Color="#10FFFFFF"/>
    <SolidColorBrush x:Key="BorderControlPressedBorderBrush" Color="{DynamicResource PrimaryColor}"/>
    <SolidColorBrush x:Key="BorderControlPressedForegroundBrush" Color="{DynamicResource PrimaryColor}"/>
    <SolidColorBrush x:Key="BorderControlDisabledBackgroundBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="BorderControlDisabledBorderBrush" Color="#2A2A2A"/>
    <SolidColorBrush x:Key="BorderControlDisabledForegroundBrush" Color="{StaticResource DisabledTextColor}"/>

    <!-- 输入型控件 -->
    <SolidColorBrush x:Key="InputControlBackgroundBrush" Color="#2C2C2C"/>
    <SolidColorBrush x:Key="InputControlBorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="InputControlForegroundBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="InputControlHoverBackgroundBrush" Color="#2C2C2C"/>
    <SolidColorBrush x:Key="InputControlHoverBorderBrush" Color="#606060"/>
    <SolidColorBrush x:Key="InputControlHoverForegroundBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="InputControlFocusedBackgroundBrush" Color="#2C2C2C"/>
    <SolidColorBrush x:Key="InputControlFocusedBorderBrush" Color="{DynamicResource PrimaryLightColor}"/>
    <SolidColorBrush x:Key="InputControlFocusedForegroundBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="InputControlDisabledBackgroundBrush" Color="#1A1A1A"/>
    <SolidColorBrush x:Key="InputControlDisabledBorderBrush" Color="#2A2A2A"/>
    <SolidColorBrush x:Key="InputControlDisabledForegroundBrush" Color="{StaticResource DisabledTextColor}"/>
    <SolidColorBrush x:Key="InputControlPlaceholderForegroundBrush" Color="#808080"/>
    <SolidColorBrush x:Key="InputControlSelectionBrush" Color="{DynamicResource PrimaryColor}"/>
    <SolidColorBrush x:Key="InputControlCaretBrush" Color="{DynamicResource PrimaryLightColor}"/>

    <!-- 选择型控件 -->
    <SolidColorBrush x:Key="SelectionControlBackgroundBrush" Color="#2C2C2C"/>
    <SolidColorBrush x:Key="SelectionControlBorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="SelectionControlForegroundBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="SelectionControlCheckMarkBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="SelectionControlHoverBackgroundBrush" Color="#3A3A3A"/>
    <SolidColorBrush x:Key="SelectionControlHoverBorderBrush" Color="#606060"/>
    <SolidColorBrush x:Key="SelectionControlHoverForegroundBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="SelectionControlHoverCheckMarkBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="SelectionControlPressedBackgroundBrush" Color="#404040"/>
    <SolidColorBrush x:Key="SelectionControlPressedBorderBrush" Color="#707070"/>
    <SolidColorBrush x:Key="SelectionControlPressedForegroundBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="SelectionControlPressedCheckMarkBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="SelectionControlCheckedBackgroundBrush" Color="{DynamicResource PrimaryLightColor}"/>
    <SolidColorBrush x:Key="SelectionControlCheckedBorderBrush" Color="{DynamicResource PrimaryLightColor}"/>
    <SolidColorBrush x:Key="SelectionControlCheckedForegroundBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="SelectionControlCheckedCheckMarkBrush" Color="#000000"/>
    <SolidColorBrush x:Key="SelectionControlCheckedHoverBackgroundBrush" Color="{DynamicResource PrimaryDarkHoverColor}"/>
    <SolidColorBrush x:Key="SelectionControlCheckedHoverBorderBrush" Color="{DynamicResource PrimaryDarkHoverColor}"/>
    <SolidColorBrush x:Key="SelectionControlCheckedHoverForegroundBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="SelectionControlCheckedHoverCheckMarkBrush" Color="#000000"/>
    <SolidColorBrush x:Key="SelectionControlCheckedPressedBackgroundBrush" Color="{DynamicResource PrimaryColor}"/>
    <SolidColorBrush x:Key="SelectionControlCheckedPressedBorderBrush" Color="{DynamicResource PrimaryColor}"/>
    <SolidColorBrush x:Key="SelectionControlCheckedPressedForegroundBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="SelectionControlCheckedPressedCheckMarkBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SelectionControlDisabledBackgroundBrush" Color="#1A1A1A"/>
    <SolidColorBrush x:Key="SelectionControlDisabledBorderBrush" Color="#2A2A2A"/>
    <SolidColorBrush x:Key="SelectionControlDisabledForegroundBrush" Color="{StaticResource DisabledTextColor}"/>
    <SolidColorBrush x:Key="SelectionControlDisabledCheckMarkBrush" Color="#4A4A4A"/>
    <SolidColorBrush x:Key="SelectionControlCheckedDisabledBackgroundBrush" Color="#3A3A3A"/>
    <SolidColorBrush x:Key="SelectionControlCheckedDisabledBorderBrush" Color="#3A3A3A"/>
    <SolidColorBrush x:Key="SelectionControlCheckedDisabledForegroundBrush" Color="{StaticResource DisabledTextColor}"/>
    <SolidColorBrush x:Key="SelectionControlCheckedDisabledCheckMarkBrush" Color="#4A4A4A"/>
    <SolidColorBrush x:Key="SelectionControlIndeterminateBackgroundBrush" Color="{DynamicResource PrimaryColor}"/>
    <SolidColorBrush x:Key="SelectionControlIndeterminateBorderBrush" Color="{DynamicResource PrimaryColor}"/>
    <SolidColorBrush x:Key="SelectionControlIndeterminateMarkBrush" Color="#000000"/>

    <!-- Switch控件 -->
    <SolidColorBrush x:Key="SwitchOffBackgroundBrush" Color="#404040"/>
    <SolidColorBrush x:Key="SwitchOffBorderBrush" Color="#404040"/>
    <SolidColorBrush x:Key="SwitchOffThumbBrush" Color="#B0B0B0"/>
    <SolidColorBrush x:Key="SwitchOffHoverBackgroundBrush" Color="#505050"/>
    <SolidColorBrush x:Key="SwitchOffHoverBorderBrush" Color="#505050"/>
    <SolidColorBrush x:Key="SwitchOffHoverThumbBrush" Color="#C0C0C0"/>
    <SolidColorBrush x:Key="SwitchOffPressedBackgroundBrush" Color="#606060"/>
    <SolidColorBrush x:Key="SwitchOffPressedBorderBrush" Color="#606060"/>
    <SolidColorBrush x:Key="SwitchOffPressedThumbBrush" Color="#D0D0D0"/>
    <SolidColorBrush x:Key="SwitchOnBackgroundBrush" Color="{DynamicResource PrimaryLightColor}"/>
    <SolidColorBrush x:Key="SwitchOnBorderBrush" Color="{DynamicResource PrimaryLightColor}"/>
    <SolidColorBrush x:Key="SwitchOnThumbBrush" Color="#E0FFFFFF"/>
    <SolidColorBrush x:Key="SwitchOnHoverBackgroundBrush" Color="{DynamicResource PrimaryDarkHoverColor}"/>
    <SolidColorBrush x:Key="SwitchOnHoverBorderBrush" Color="{DynamicResource PrimaryDarkHoverColor}"/>
    <SolidColorBrush x:Key="SwitchOnHoverThumbBrush" Color="#E0FFFFFF"/>
    <SolidColorBrush x:Key="SwitchOnPressedBackgroundBrush" Color="{DynamicResource PrimaryColor}"/>
    <SolidColorBrush x:Key="SwitchOnPressedBorderBrush" Color="{DynamicResource PrimaryColor}"/>
    <SolidColorBrush x:Key="SwitchOnPressedThumbBrush" Color="#E0FFFFFF"/>
    <SolidColorBrush x:Key="SwitchDisabledBackgroundBrush" Color="#2A2A2A"/>
    <SolidColorBrush x:Key="SwitchDisabledBorderBrush" Color="#2A2A2A"/>
    <SolidColorBrush x:Key="SwitchDisabledThumbBrush" Color="#404040"/>
    <SolidColorBrush x:Key="SwitchOnDisabledBackgroundBrush" Color="#3A3A3A"/>
    <SolidColorBrush x:Key="SwitchOnDisabledBorderBrush" Color="#3A3A3A"/>
    <SolidColorBrush x:Key="SwitchOnDisabledThumbBrush" Color="#505050"/>

    <!-- 危险型控件 - 引用主题颜色 -->
    <SolidColorBrush x:Key="DangerControlBackgroundBrush" Color="{DynamicResource ErrorLightColor}"/>
    <SolidColorBrush x:Key="DangerControlBorderBrush" Color="{DynamicResource ErrorLightColor}"/>
    <SolidColorBrush x:Key="DangerControlForegroundBrush" Color="#E0FFFFFF"/>
    <SolidColorBrush x:Key="DangerControlHoverBackgroundBrush" Color="{DynamicResource ErrorColor}"/>
    <SolidColorBrush x:Key="DangerControlPressedBackgroundBrush" Color="{DynamicResource ErrorDarkColor}"/>
    <SolidColorBrush x:Key="DangerControlDisabledBackgroundBrush" Color="#4A1C1C"/>
    <SolidColorBrush x:Key="DangerControlDisabledBorderBrush" Color="#4A1C1C"/>
    <SolidColorBrush x:Key="DangerControlDisabledForegroundBrush" Color="#803333"/>

    <!-- 警示型控件 - 引用主题颜色 -->
    <SolidColorBrush x:Key="WarningControlBackgroundBrush" Color="{DynamicResource WarningLightColor}"/>
    <SolidColorBrush x:Key="WarningControlBorderBrush" Color="{DynamicResource WarningLightColor}"/>
    <SolidColorBrush x:Key="WarningControlForegroundBrush" Color="#E0FFFFFF"/>
    <SolidColorBrush x:Key="WarningControlHoverBackgroundBrush" Color="{DynamicResource WarningColor}"/>
    <SolidColorBrush x:Key="WarningControlPressedBackgroundBrush" Color="{DynamicResource WarningDarkColor}"/>
    <SolidColorBrush x:Key="WarningControlDisabledBackgroundBrush" Color="#4A2C00"/>
    <SolidColorBrush x:Key="WarningControlDisabledBorderBrush" Color="#4A2C00"/>
    <SolidColorBrush x:Key="WarningControlDisabledForegroundBrush" Color="#805300"/>

    <!-- 安全型控件 - 引用主题颜色 -->
    <SolidColorBrush x:Key="SuccessControlBackgroundBrush" Color="{DynamicResource SuccessLightColor}"/>
    <SolidColorBrush x:Key="SuccessControlBorderBrush" Color="{DynamicResource SuccessLightColor}"/>
    <SolidColorBrush x:Key="SuccessControlForegroundBrush" Color="#E0FFFFFF"/>
    <SolidColorBrush x:Key="SuccessControlHoverBackgroundBrush" Color="{DynamicResource SuccessColor}"/>
    <SolidColorBrush x:Key="SuccessControlPressedBackgroundBrush" Color="{DynamicResource SuccessDarkColor}"/>
    <SolidColorBrush x:Key="SuccessControlDisabledBackgroundBrush" Color="#1B3A1B"/>
    <SolidColorBrush x:Key="SuccessControlDisabledBorderBrush" Color="#1B3A1B"/>
    <SolidColorBrush x:Key="SuccessControlDisabledForegroundBrush" Color="#336633"/>

    <!-- 3. 卡片样式 - 引用主题颜色 -->

    <!-- Primary主题卡片 -->
    <SolidColorBrush x:Key="PrimaryThemedCardBackgroundBrush" Color="{DynamicResource Primary900}" Opacity="0.15"/>
    <SolidColorBrush x:Key="PrimaryThemedCardBorderBrush" Color="{DynamicResource Primary600}" Opacity="0.6"/>
    <SolidColorBrush x:Key="PrimaryThemedCardHoverBackgroundBrush" Color="{DynamicResource Primary800}" Opacity="0.25"/>
    <SolidColorBrush x:Key="PrimaryThemedCardHoverBorderBrush" Color="{DynamicResource Primary500}"/>
    <SolidColorBrush x:Key="PrimaryThemedCardPressedBackgroundBrush" Color="{DynamicResource Primary700}" Opacity="0.35"/>
    <SolidColorBrush x:Key="PrimaryThemedCardPressedBorderBrush" Color="{DynamicResource Primary400}"/>
    <SolidColorBrush x:Key="PrimaryThemedCardDisabledBackgroundBrush" Color="#1A1A2A"/>
    <SolidColorBrush x:Key="PrimaryThemedCardDisabledBorderBrush" Color="#2A2A3A"/>
    <SolidColorBrush x:Key="PrimaryThemedCardForegroundBrush" Color="{DynamicResource Primary200}"/>
    <SolidColorBrush x:Key="PrimaryThemedCardSecondaryForegroundBrush" Color="{DynamicResource Primary300}"/>

    <!-- Secondary主题卡片 -->
    <SolidColorBrush x:Key="SecondaryThemedCardBackgroundBrush" Color="{DynamicResource Secondary900}" Opacity="0.15"/>
    <SolidColorBrush x:Key="SecondaryThemedCardBorderBrush" Color="{DynamicResource Secondary600}" Opacity="0.6"/>
    <SolidColorBrush x:Key="SecondaryThemedCardHoverBackgroundBrush" Color="{DynamicResource Secondary800}" Opacity="0.25"/>
    <SolidColorBrush x:Key="SecondaryThemedCardHoverBorderBrush" Color="{DynamicResource Secondary500}"/>
    <SolidColorBrush x:Key="SecondaryThemedCardPressedBackgroundBrush" Color="{DynamicResource Secondary700}" Opacity="0.35"/>
    <SolidColorBrush x:Key="SecondaryThemedCardPressedBorderBrush" Color="{DynamicResource Secondary400}"/>
    <SolidColorBrush x:Key="SecondaryThemedCardDisabledBackgroundBrush" Color="#1A2A2A"/>
    <SolidColorBrush x:Key="SecondaryThemedCardDisabledBorderBrush" Color="#2A3A3A"/>
    <SolidColorBrush x:Key="SecondaryThemedCardForegroundBrush" Color="{DynamicResource Secondary200}"/>
    <SolidColorBrush x:Key="SecondaryThemedCardSecondaryForegroundBrush" Color="{DynamicResource Secondary300}"/>

    <!-- Accent主题卡片 -->
    <SolidColorBrush x:Key="AccentThemedCardBackgroundBrush" Color="{DynamicResource Accent900}" Opacity="0.15"/>
    <SolidColorBrush x:Key="AccentThemedCardBorderBrush" Color="{DynamicResource Accent600}" Opacity="0.6"/>
    <SolidColorBrush x:Key="AccentThemedCardHoverBackgroundBrush" Color="{DynamicResource Accent800}" Opacity="0.25"/>
    <SolidColorBrush x:Key="AccentThemedCardHoverBorderBrush" Color="{DynamicResource Accent500}"/>
    <SolidColorBrush x:Key="AccentThemedCardPressedBackgroundBrush" Color="{DynamicResource Accent700}" Opacity="0.35"/>
    <SolidColorBrush x:Key="AccentThemedCardPressedBorderBrush" Color="{DynamicResource Accent400}"/>
    <SolidColorBrush x:Key="AccentThemedCardDisabledBackgroundBrush" Color="#2A1A1A"/>
    <SolidColorBrush x:Key="AccentThemedCardDisabledBorderBrush" Color="#3A2A2A"/>
    <SolidColorBrush x:Key="AccentThemedCardForegroundBrush" Color="{DynamicResource Accent200}"/>
    <SolidColorBrush x:Key="AccentThemedCardSecondaryForegroundBrush" Color="{DynamicResource Accent300}"/>

    <!-- 渐变主题卡片背景 -->
    <LinearGradientBrush x:Key="PrimaryThemedCardGradientBackgroundBrush" StartPoint="0,0" EndPoint="1,1" Opacity="0.2">
        <GradientStop Color="{DynamicResource Primary700}" Offset="0"/>
        <GradientStop Color="{DynamicResource Primary900}" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="SecondaryThemedCardGradientBackgroundBrush" StartPoint="0,0" EndPoint="1,1" Opacity="0.2">
        <GradientStop Color="{DynamicResource Secondary700}" Offset="0"/>
        <GradientStop Color="{DynamicResource Secondary900}" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="AccentThemedCardGradientBackgroundBrush" StartPoint="0,0" EndPoint="1,1" Opacity="0.2">
        <GradientStop Color="{DynamicResource Accent700}" Offset="0"/>
        <GradientStop Color="{DynamicResource Accent900}" Offset="1"/>
    </LinearGradientBrush>

    <!-- 高亮主题卡片（用于重要内容） -->
    <SolidColorBrush x:Key="HighlightThemedCardBackgroundBrush" Color="{DynamicResource Primary700}" Opacity="0.3"/>
    <SolidColorBrush x:Key="HighlightThemedCardBorderBrush" Color="{DynamicResource Primary400}"/>
    <SolidColorBrush x:Key="HighlightThemedCardHoverBackgroundBrush" Color="{DynamicResource Primary600}" Opacity="0.4"/>
    <SolidColorBrush x:Key="HighlightThemedCardHoverBorderBrush" Color="{DynamicResource Primary300}"/>
    <SolidColorBrush x:Key="HighlightThemedCardForegroundBrush" Color="{DynamicResource Primary100}"/>

    <!-- 轮廓主题卡片（只有边框的卡片） -->
    <SolidColorBrush x:Key="OutlineThemedCardBackgroundBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="OutlineThemedCardBorderBrush" Color="{DynamicResource Primary500}" Opacity="0.8"/>
    <SolidColorBrush x:Key="OutlineThemedCardHoverBackgroundBrush" Color="{DynamicResource Primary800}" Opacity="0.15"/>
    <SolidColorBrush x:Key="OutlineThemedCardHoverBorderBrush" Color="{DynamicResource Primary400}"/>
    <SolidColorBrush x:Key="OutlineThemedCardPressedBackgroundBrush" Color="{DynamicResource Primary700}" Opacity="0.25"/>
    <SolidColorBrush x:Key="OutlineThemedCardPressedBorderBrush" Color="{DynamicResource Primary300}"/>
    <SolidColorBrush x:Key="OutlineThemedCardForegroundBrush" Color="{DynamicResource Primary300}"/>

    <!-- 玻璃态主题卡片 -->
    <SolidColorBrush x:Key="GlassThemedCardBackgroundBrush" Color="#08FFFFFF" Opacity="0.95"/>
    <SolidColorBrush x:Key="GlassThemedCardBorderBrush" Color="{DynamicResource Primary400}" Opacity="0.4"/>
    <SolidColorBrush x:Key="GlassThemedCardHoverBackgroundBrush" Color="#10FFFFFF"/>
    <SolidColorBrush x:Key="GlassThemedCardHoverBorderBrush" Color="{DynamicResource Primary300}" Opacity="0.6"/>
    <SolidColorBrush x:Key="GlassThemedCardForegroundBrush" Color="{DynamicResource Primary200}"/>

    <!-- 深色主题卡片（不随主题切换） -->
    <SolidColorBrush x:Key="DarkThemedCardBackgroundBrush" Color="{DynamicResource Primary800}"/>
    <SolidColorBrush x:Key="DarkThemedCardBorderBrush" Color="{DynamicResource Primary700}"/>
    <SolidColorBrush x:Key="DarkThemedCardHoverBackgroundBrush" Color="{DynamicResource Primary700}"/>
    <SolidColorBrush x:Key="DarkThemedCardHoverBorderBrush" Color="{DynamicResource Primary600}"/>
    <SolidColorBrush x:Key="DarkThemedCardForegroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="DarkThemedCardSecondaryForegroundBrush" Color="{DynamicResource Primary100}"/>

    <!-- 亮色主题卡片（不随主题切换） -->
    <SolidColorBrush x:Key="LightThemedCardBackgroundBrush" Color="{DynamicResource Primary100}"/>
    <SolidColorBrush x:Key="LightThemedCardBorderBrush" Color="{DynamicResource Primary200}"/>
    <SolidColorBrush x:Key="LightThemedCardHoverBackgroundBrush" Color="{DynamicResource Primary50}"/>
    <SolidColorBrush x:Key="LightThemedCardHoverBorderBrush" Color="{DynamicResource Primary300}"/>
    <SolidColorBrush x:Key="LightThemedCardForegroundBrush" Color="{DynamicResource Primary900}"/>
    <SolidColorBrush x:Key="LightThemedCardSecondaryForegroundBrush" Color="{DynamicResource Primary700}"/>

    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="CardBorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="CardDisabledBackgroundBrush" Color="#1A1A1A"/>
    <SolidColorBrush x:Key="CardDisabledBorderBrush" Color="#2A2A2A"/>

    <SolidColorBrush x:Key="DangerCardBackgroundBrush" Color="#2D1B1B"/>
    <SolidColorBrush x:Key="DangerCardBorderBrush" Color="#4A2828"/>
    <SolidColorBrush x:Key="DangerCardDisabledBackgroundBrush" Color="#251515"/>
    <SolidColorBrush x:Key="DangerCardDisabledBorderBrush" Color="#3A2020"/>

    <SolidColorBrush x:Key="WarningCardBackgroundBrush" Color="#2D2518"/>
    <SolidColorBrush x:Key="WarningCardBorderBrush" Color="#4A3D28"/>
    <SolidColorBrush x:Key="WarningCardDisabledBackgroundBrush" Color="#252015"/>
    <SolidColorBrush x:Key="WarningCardDisabledBorderBrush" Color="#3A3020"/>

    <SolidColorBrush x:Key="SuccessCardBackgroundBrush" Color="#1B2D1B"/>
    <SolidColorBrush x:Key="SuccessCardBorderBrush" Color="#284A28"/>
    <SolidColorBrush x:Key="SuccessCardDisabledBackgroundBrush" Color="#152515"/>
    <SolidColorBrush x:Key="SuccessCardDisabledBorderBrush" Color="#203A20"/>

    <SolidColorBrush x:Key="InfoCardBackgroundBrush" Color="#1B2D3F"/>
    <SolidColorBrush x:Key="InfoCardBorderBrush" Color="#284A6B"/>
    <SolidColorBrush x:Key="InfoCardDisabledBackgroundBrush" Color="#152535"/>
    <SolidColorBrush x:Key="InfoCardDisabledBorderBrush" Color="#203A50"/>

    <!-- 4. 文字样式 - 引用主题颜色的标题 -->
    <!-- 标题文字 - 使用主题色（深色背景用浅色变体） -->
    <SolidColorBrush x:Key="Heading1Brush" Color="{DynamicResource Heading1ColorDark}"/>
    <SolidColorBrush x:Key="Heading2Brush" Color="{DynamicResource Heading2ColorDark}"/>
    <SolidColorBrush x:Key="Heading3Brush" Color="{DynamicResource Heading3ColorDark}"/>
    <SolidColorBrush x:Key="Heading4Brush" Color="{DynamicResource Heading4ColorDark}"/>
    <SolidColorBrush x:Key="Heading5Brush" Color="{DynamicResource Heading5ColorDark}"/>
    <SolidColorBrush x:Key="Heading6Brush" Color="{DynamicResource Heading6ColorDark}"/>

    <!-- 正文文字 -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>
    <SolidColorBrush x:Key="TertiaryTextBrush" Color="#808080"/>
    <SolidColorBrush x:Key="QuaternaryTextBrush" Color="#666666"/>
    <SolidColorBrush x:Key="QuinaryTextBrush" Color="#4D4D4D"/>
    <SolidColorBrush x:Key="SenaryTextBrush" Color="#333333"/>

    <!-- 状态文字 - 引用主题颜色 -->
    <SolidColorBrush x:Key="DangerTextBrush" Color="{DynamicResource ErrorLightColor}"/>
    <SolidColorBrush x:Key="WarningTextBrush" Color="{DynamicResource WarningLightColor}"/>
    <SolidColorBrush x:Key="SuccessTextBrush" Color="{DynamicResource SuccessLightColor}"/>
    <SolidColorBrush x:Key="InfoTextBrush" Color="{DynamicResource InfoLightColor}"/>

    <!-- 5. 阴影效果 -->
    <DropShadowEffect x:Key="CardShadowEffect" 
                      Color="{DynamicResource Primary900}" 
                      Direction="270" 
                      ShadowDepth="2" 
                      Opacity="0.5" 
                      BlurRadius="8"/>

    <DropShadowEffect x:Key="HoverShadowEffect" 
                      Color="{DynamicResource Primary800}" 
                      Direction="270" 
                      ShadowDepth="0" 
                      Opacity="0.5" 
                      BlurRadius="12"/>

    <DropShadowEffect x:Key="PopupShadowEffect" 
                      Color="{DynamicResource Primary900}" 
                      Direction="270" 
                      ShadowDepth="4" 
                      Opacity="0.5" 
                      BlurRadius="16"/>

    <!-- 原有画刷保留并引用主题颜色 -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
