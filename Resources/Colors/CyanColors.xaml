<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- 青色主题色调 -->
    <Color x:Key="PrimaryColor">#00BCD4</Color>
    <Color x:Key="PrimaryLightColor">#4DD0E1</Color>
    <Color x:Key="PrimaryDarkColor">#0097A7</Color>
    <Color x:Key="PrimaryDarkHoverColor">#26C6DA</Color>

    <!-- 扩展的主题色调 -->
    <Color x:Key="Primary50">#E0F7FA</Color>
    <Color x:Key="Primary100">#B2EBF2</Color>
    <Color x:Key="Primary200">#80DEEA</Color>
    <Color x:Key="Primary300">#4DD0E1</Color>
    <Color x:Key="Primary400">#26C6DA</Color>
    <Color x:Key="Primary500">#00BCD4</Color>
    <Color x:Key="Primary600">#00ACC1</Color>
    <Color x:Key="Primary700">#0097A7</Color>
    <Color x:Key="Primary800">#00838F</Color>
    <Color x:Key="Primary900">#006064</Color>

    <Color x:Key="SecondaryColor">#009688</Color>
    <Color x:Key="SecondaryLightColor">#4DB6AC</Color>
    <Color x:Key="SecondaryDarkColor">#00695C</Color>

    <!-- 扩展的次要色调 -->
    <Color x:Key="Secondary50">#E0F2F1</Color>
    <Color x:Key="Secondary100">#B2DFDB</Color>
    <Color x:Key="Secondary200">#80CBC4</Color>
    <Color x:Key="Secondary300">#4DB6AC</Color>
    <Color x:Key="Secondary400">#26A69A</Color>
    <Color x:Key="Secondary500">#009688</Color>
    <Color x:Key="Secondary600">#00897B</Color>
    <Color x:Key="Secondary700">#00796B</Color>
    <Color x:Key="Secondary800">#00695C</Color>
    <Color x:Key="Secondary900">#004D40</Color>

    <Color x:Key="AccentColor">#FF5722</Color>
    <Color x:Key="AccentLightColor">#FF8A65</Color>
    <Color x:Key="AccentDarkColor">#D84315</Color>

    <!-- 扩展的强调色调 -->
    <Color x:Key="Accent50">#FBE9E7</Color>
    <Color x:Key="Accent100">#FFCCBC</Color>
    <Color x:Key="Accent200">#FFAB91</Color>
    <Color x:Key="Accent300">#FF8A65</Color>
    <Color x:Key="Accent400">#FF7043</Color>
    <Color x:Key="Accent500">#FF5722</Color>
    <Color x:Key="Accent600">#F4511E</Color>
    <Color x:Key="Accent700">#E64A19</Color>
    <Color x:Key="Accent800">#D84315</Color>
    <Color x:Key="Accent900">#BF360C</Color>

    <!-- 标题颜色 - 基于主题色的深浅变体 -->
    <Color x:Key="Heading1Color">#006064</Color>
    <!-- Primary900 -->
    <Color x:Key="Heading2Color">#00838F</Color>
    <!-- Primary800 -->
    <Color x:Key="Heading3Color">#0097A7</Color>
    <!-- Primary700 -->
    <Color x:Key="Heading4Color">#00ACC1</Color>
    <!-- Primary600 -->
    <Color x:Key="Heading5Color">#00BCD4</Color>
    <!-- Primary500 -->
    <Color x:Key="Heading6Color">#26C6DA</Color>
    <!-- Primary400 -->

    <!-- 标题颜色（深色背景用） -->
    <Color x:Key="Heading1ColorDark">#E0F7FA</Color>
    <!-- Primary50 -->
    <Color x:Key="Heading2ColorDark">#B2EBF2</Color>
    <!-- Primary100 -->
    <Color x:Key="Heading3ColorDark">#80DEEA</Color>
    <!-- Primary200 -->
    <Color x:Key="Heading4ColorDark">#4DD0E1</Color>
    <!-- Primary300 -->
    <Color x:Key="Heading5ColorDark">#26C6DA</Color>
    <!-- Primary400 -->
    <Color x:Key="Heading6ColorDark">#00BCD4</Color>
    <!-- Primary500 -->

    <!-- 状态颜色 -->
    <Color x:Key="SuccessColor">#4CAF50</Color>
    <Color x:Key="SuccessLightColor">#81C784</Color>
    <Color x:Key="SuccessDarkColor">#388E3C</Color>

    <Color x:Key="WarningColor">#FF9800</Color>
    <Color x:Key="WarningLightColor">#FFCC80</Color>
    <Color x:Key="WarningDarkColor">#F57C00</Color>

    <Color x:Key="ErrorColor">#F44336</Color>
    <Color x:Key="ErrorLightColor">#EF5350</Color>
    <Color x:Key="ErrorDarkColor">#D32F2F</Color>

    <Color x:Key="InfoColor">#00BCD4</Color>
    <Color x:Key="InfoLightColor">#4DD0E1</Color>
    <Color x:Key="InfoDarkColor">#0097A7</Color>

    <!-- 画刷 -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}"/>

    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="SecondaryLightBrush" Color="{StaticResource SecondaryLightColor}"/>
    <SolidColorBrush x:Key="SecondaryDarkBrush" Color="{StaticResource SecondaryDarkColor}"/>

    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentLightBrush" Color="{StaticResource AccentLightColor}"/>
    <SolidColorBrush x:Key="AccentDarkBrush" Color="{StaticResource AccentDarkColor}"/>

    <!-- 状态画刷 -->
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="SuccessLightBrush" Color="{StaticResource SuccessLightColor}"/>
    <SolidColorBrush x:Key="SuccessDarkBrush" Color="{StaticResource SuccessDarkColor}"/>

    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="WarningLightBrush" Color="{StaticResource WarningLightColor}"/>
    <SolidColorBrush x:Key="WarningDarkBrush" Color="{StaticResource WarningDarkColor}"/>

    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="ErrorLightBrush" Color="{StaticResource ErrorLightColor}"/>
    <SolidColorBrush x:Key="ErrorDarkBrush" Color="{StaticResource ErrorDarkColor}"/>

    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>
    <SolidColorBrush x:Key="InfoLightBrush" Color="{StaticResource InfoLightColor}"/>
    <SolidColorBrush x:Key="InfoDarkBrush" Color="{StaticResource InfoDarkColor}"/>

    <!-- 标题画刷 -->
    <SolidColorBrush x:Key="Heading1ColorBrush" Color="{StaticResource Heading1Color}"/>
    <SolidColorBrush x:Key="Heading2ColorBrush" Color="{StaticResource Heading2Color}"/>
    <SolidColorBrush x:Key="Heading3ColorBrush" Color="{StaticResource Heading3Color}"/>
    <SolidColorBrush x:Key="Heading4ColorBrush" Color="{StaticResource Heading4Color}"/>
    <SolidColorBrush x:Key="Heading5ColorBrush" Color="{StaticResource Heading5Color}"/>
    <SolidColorBrush x:Key="Heading6ColorBrush" Color="{StaticResource Heading6Color}"/>

    <SolidColorBrush x:Key="Heading1ColorDarkBrush" Color="{StaticResource Heading1ColorDark}"/>
    <SolidColorBrush x:Key="Heading2ColorDarkBrush" Color="{StaticResource Heading2ColorDark}"/>
    <SolidColorBrush x:Key="Heading3ColorDarkBrush" Color="{StaticResource Heading3ColorDark}"/>
    <SolidColorBrush x:Key="Heading4ColorDarkBrush" Color="{StaticResource Heading4ColorDark}"/>
    <SolidColorBrush x:Key="Heading5ColorDarkBrush" Color="{StaticResource Heading5ColorDark}"/>
    <SolidColorBrush x:Key="Heading6ColorDarkBrush" Color="{StaticResource Heading6ColorDark}"/>
</ResourceDictionary>