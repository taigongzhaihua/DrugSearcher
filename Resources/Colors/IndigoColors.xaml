<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- 靛蓝色主题色调 -->
    <Color x:Key="PrimaryColor">#3F51B5</Color>
    <Color x:Key="PrimaryLightColor">#7986CB</Color>
    <Color x:Key="PrimaryDarkColor">#303F9F</Color>
    <Color x:Key="PrimaryDarkHoverColor">#5C6BC0</Color>

    <!-- 扩展的主题色调 -->
    <Color x:Key="Primary50">#E8EAF6</Color>
    <Color x:Key="Primary100">#C5CAE9</Color>
    <Color x:Key="Primary200">#9FA8DA</Color>
    <Color x:Key="Primary300">#7986CB</Color>
    <Color x:Key="Primary400">#5C6BC0</Color>
    <Color x:Key="Primary500">#3F51B5</Color>
    <Color x:Key="Primary600">#3949AB</Color>
    <Color x:Key="Primary700">#303F9F</Color>
    <Color x:Key="Primary800">#283593</Color>
    <Color x:Key="Primary900">#1A237E</Color>

    <Color x:Key="SecondaryColor">#2196F3</Color>
    <Color x:Key="SecondaryLightColor">#64B5F6</Color>
    <Color x:Key="SecondaryDarkColor">#1976D2</Color>

    <!-- 扩展的次要色调 -->
    <Color x:Key="Secondary50">#E3F2FD</Color>
    <Color x:Key="Secondary100">#BBDEFB</Color>
    <Color x:Key="Secondary200">#90CAF9</Color>
    <Color x:Key="Secondary300">#64B5F6</Color>
    <Color x:Key="Secondary400">#42A5F5</Color>
    <Color x:Key="Secondary500">#2196F3</Color>
    <Color x:Key="Secondary600">#1E88E5</Color>
    <Color x:Key="Secondary700">#1976D2</Color>
    <Color x:Key="Secondary800">#1565C0</Color>
    <Color x:Key="Secondary900">#0D47A1</Color>

    <Color x:Key="AccentColor">#E91E63</Color>
    <Color x:Key="AccentLightColor">#F48FB1</Color>
    <Color x:Key="AccentDarkColor">#C2185B</Color>

    <!-- 扩展的强调色调 -->
    <Color x:Key="Accent50">#FCE4EC</Color>
    <Color x:Key="Accent100">#F8BBD0</Color>
    <Color x:Key="Accent200">#F48FB1</Color>
    <Color x:Key="Accent300">#F06292</Color>
    <Color x:Key="Accent400">#EC407A</Color>
    <Color x:Key="Accent500">#E91E63</Color>
    <Color x:Key="Accent600">#D81B60</Color>
    <Color x:Key="Accent700">#C2185B</Color>
    <Color x:Key="Accent800">#AD1457</Color>
    <Color x:Key="Accent900">#880E4F</Color>

    <!-- 标题颜色 - 基于主题色的深浅变体 -->
    <Color x:Key="Heading1Color">#1A237E</Color>
    <!-- Primary900 -->
    <Color x:Key="Heading2Color">#283593</Color>
    <!-- Primary800 -->
    <Color x:Key="Heading3Color">#303F9F</Color>
    <!-- Primary700 -->
    <Color x:Key="Heading4Color">#3949AB</Color>
    <!-- Primary600 -->
    <Color x:Key="Heading5Color">#3F51B5</Color>
    <!-- Primary500 -->
    <Color x:Key="Heading6Color">#5C6BC0</Color>
    <!-- Primary400 -->

    <!-- 标题颜色（深色背景用） -->
    <Color x:Key="Heading1ColorDark">#E8EAF6</Color>
    <!-- Primary50 -->
    <Color x:Key="Heading2ColorDark">#C5CAE9</Color>
    <!-- Primary100 -->
    <Color x:Key="Heading3ColorDark">#9FA8DA</Color>
    <!-- Primary200 -->
    <Color x:Key="Heading4ColorDark">#7986CB</Color>
    <!-- Primary300 -->
    <Color x:Key="Heading5ColorDark">#5C6BC0</Color>
    <!-- Primary400 -->
    <Color x:Key="Heading6ColorDark">#3F51B5</Color>
    <!-- Primary500 -->

    <!-- 状态颜色 -->
    <Color x:Key="SuccessColor">#4CAF50</Color>
    <Color x:Key="SuccessLightColor">#81C784</Color>
    <Color x:Key="SuccessDarkColor">#388E3C</Color>

    <Color x:Key="WarningColor">#FF9800</Color>
    <Color x:Key="WarningLightColor">#FFCC80</Color>
    <Color x:Key="WarningDarkColor">#F57C00</Color>

    <Color x:Key="ErrorColor">#F44336</Color>
    <Color x:Key="ErrorLightColor">#EF5350</Color>
    <Color x:Key="ErrorDarkColor">#D32F2F</Color>

    <Color x:Key="InfoColor">#3F51B5</Color>
    <Color x:Key="InfoLightColor">#7986CB</Color>
    <Color x:Key="InfoDarkColor">#303F9F</Color>

    <!-- 画刷 -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}"/>

    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="SecondaryLightBrush" Color="{StaticResource SecondaryLightColor}"/>
    <SolidColorBrush x:Key="SecondaryDarkBrush" Color="{StaticResource SecondaryDarkColor}"/>

    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentLightBrush" Color="{StaticResource AccentLightColor}"/>
    <SolidColorBrush x:Key="AccentDarkBrush" Color="{StaticResource AccentDarkColor}"/>

    <!-- 状态画刷 -->
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="SuccessLightBrush" Color="{StaticResource SuccessLightColor}"/>
    <SolidColorBrush x:Key="SuccessDarkBrush" Color="{StaticResource SuccessDarkColor}"/>

    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="WarningLightBrush" Color="{StaticResource WarningLightColor}"/>
    <SolidColorBrush x:Key="WarningDarkBrush" Color="{StaticResource WarningDarkColor}"/>

    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="ErrorLightBrush" Color="{StaticResource ErrorLightColor}"/>
    <SolidColorBrush x:Key="ErrorDarkBrush" Color="{StaticResource ErrorDarkColor}"/>

    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>
    <SolidColorBrush x:Key="InfoLightBrush" Color="{StaticResource InfoLightColor}"/>
    <SolidColorBrush x:Key="InfoDarkBrush" Color="{StaticResource InfoDarkColor}"/>

    <!-- 标题画刷 -->
    <SolidColorBrush x:Key="Heading1ColorBrush" Color="{StaticResource Heading1Color}"/>
    <SolidColorBrush x:Key="Heading2ColorBrush" Color="{StaticResource Heading2Color}"/>
    <SolidColorBrush x:Key="Heading3ColorBrush" Color="{StaticResource Heading3Color}"/>
    <SolidColorBrush x:Key="Heading4ColorBrush" Color="{StaticResource Heading4Color}"/>
    <SolidColorBrush x:Key="Heading5ColorBrush" Color="{StaticResource Heading5Color}"/>
    <SolidColorBrush x:Key="Heading6ColorBrush" Color="{StaticResource Heading6Color}"/>

    <SolidColorBrush x:Key="Heading1ColorDarkBrush" Color="{StaticResource Heading1ColorDark}"/>
    <SolidColorBrush x:Key="Heading2ColorDarkBrush" Color="{StaticResource Heading2ColorDark}"/>
    <SolidColorBrush x:Key="Heading3ColorDarkBrush" Color="{StaticResource Heading3ColorDark}"/>
    <SolidColorBrush x:Key="Heading4ColorDarkBrush" Color="{StaticResource Heading4ColorDark}"/>
    <SolidColorBrush x:Key="Heading5ColorDarkBrush" Color="{StaticResource Heading5ColorDark}"/>
    <SolidColorBrush x:Key="Heading6ColorDarkBrush" Color="{StaticResource Heading6ColorDark}"/>
</ResourceDictionary>