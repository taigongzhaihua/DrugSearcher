<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- 绿色主题色调 -->
    <Color x:Key="PrimaryColor">#4CAF50</Color>
    <Color x:Key="PrimaryLightColor">#81C784</Color>
    <Color x:Key="PrimaryDarkColor">#388E3C</Color>
    <Color x:Key="PrimaryDarkHoverColor">#66BB6A</Color>

    <!-- 扩展的主题色调 -->
    <Color x:Key="Primary50">#E8F5E9</Color>
    <Color x:Key="Primary100">#C8E6C9</Color>
    <Color x:Key="Primary200">#A5D6A7</Color>
    <Color x:Key="Primary300">#81C784</Color>
    <Color x:Key="Primary400">#66BB6A</Color>
    <Color x:Key="Primary500">#4CAF50</Color>
    <Color x:Key="Primary600">#43A047</Color>
    <Color x:Key="Primary700">#388E3C</Color>
    <Color x:Key="Primary800">#2E7D32</Color>
    <Color x:Key="Primary900">#1B5E20</Color>

    <Color x:Key="SecondaryColor">#8BC34A</Color>
    <Color x:Key="SecondaryLightColor">#AED581</Color>
    <Color x:Key="SecondaryDarkColor">#689F38</Color>

    <!-- 扩展的次要色调 -->
    <Color x:Key="Secondary50">#F1F8E9</Color>
    <Color x:Key="Secondary100">#DCEDC8</Color>
    <Color x:Key="Secondary200">#C5E1A5</Color>
    <Color x:Key="Secondary300">#AED581</Color>
    <Color x:Key="Secondary400">#9CCC65</Color>
    <Color x:Key="Secondary500">#8BC34A</Color>
    <Color x:Key="Secondary600">#7CB342</Color>
    <Color x:Key="Secondary700">#689F38</Color>
    <Color x:Key="Secondary800">#558B2F</Color>
    <Color x:Key="Secondary900">#33691E</Color>

    <Color x:Key="AccentColor">#FF9800</Color>
    <Color x:Key="AccentLightColor">#FFCC80</Color>
    <Color x:Key="AccentDarkColor">#F57C00</Color>

    <!-- 扩展的强调色调 -->
    <Color x:Key="Accent50">#FFF3E0</Color>
    <Color x:Key="Accent100">#FFE0B2</Color>
    <Color x:Key="Accent200">#FFCC80</Color>
    <Color x:Key="Accent300">#FFB74D</Color>
    <Color x:Key="Accent400">#FFA726</Color>
    <Color x:Key="Accent500">#FF9800</Color>
    <Color x:Key="Accent600">#FB8C00</Color>
    <Color x:Key="Accent700">#F57C00</Color>
    <Color x:Key="Accent800">#EF6C00</Color>
    <Color x:Key="Accent900">#E65100</Color>

    <!-- 标题颜色 - 基于主题色的深浅变体 -->
    <Color x:Key="Heading1Color">#1B5E20</Color>
    <!-- Primary900 -->
    <Color x:Key="Heading2Color">#2E7D32</Color>
    <!-- Primary800 -->
    <Color x:Key="Heading3Color">#388E3C</Color>
    <!-- Primary700 -->
    <Color x:Key="Heading4Color">#43A047</Color>
    <!-- Primary600 -->
    <Color x:Key="Heading5Color">#4CAF50</Color>
    <!-- Primary500 -->
    <Color x:Key="Heading6Color">#66BB6A</Color>
    <!-- Primary400 -->

    <!-- 标题颜色（深色背景用） -->
    <Color x:Key="Heading1ColorDark">#E8F5E9</Color>
    <!-- Primary50 -->
    <Color x:Key="Heading2ColorDark">#C8E6C9</Color>
    <!-- Primary100 -->
    <Color x:Key="Heading3ColorDark">#A5D6A7</Color>
    <!-- Primary200 -->
    <Color x:Key="Heading4ColorDark">#81C784</Color>
    <!-- Primary300 -->
    <Color x:Key="Heading5ColorDark">#66BB6A</Color>
    <!-- Primary400 -->
    <Color x:Key="Heading6ColorDark">#4CAF50</Color>
    <!-- Primary500 -->

    <!-- 状态颜色 -->
    <Color x:Key="SuccessColor">#4CAF50</Color>
    <Color x:Key="SuccessLightColor">#81C784</Color>
    <Color x:Key="SuccessDarkColor">#388E3C</Color>

    <Color x:Key="WarningColor">#FF9800</Color>
    <Color x:Key="WarningLightColor">#FFCC80</Color>
    <Color x:Key="WarningDarkColor">#F57C00</Color>

    <Color x:Key="ErrorColor">#F44336</Color>
    <Color x:Key="ErrorLightColor">#EF5350</Color>
    <Color x:Key="ErrorDarkColor">#D32F2F</Color>

    <Color x:Key="InfoColor">#2196F3</Color>
    <Color x:Key="InfoLightColor">#64B5F6</Color>
    <Color x:Key="InfoDarkColor">#1976D2</Color>

    <!-- 画刷 -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}"/>

    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="SecondaryLightBrush" Color="{StaticResource SecondaryLightColor}"/>
    <SolidColorBrush x:Key="SecondaryDarkBrush" Color="{StaticResource SecondaryDarkColor}"/>

    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentLightBrush" Color="{StaticResource AccentLightColor}"/>
    <SolidColorBrush x:Key="AccentDarkBrush" Color="{StaticResource AccentDarkColor}"/>

    <!-- 状态画刷 -->
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="SuccessLightBrush" Color="{StaticResource SuccessLightColor}"/>
    <SolidColorBrush x:Key="SuccessDarkBrush" Color="{StaticResource SuccessDarkColor}"/>

    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="WarningLightBrush" Color="{StaticResource WarningLightColor}"/>
    <SolidColorBrush x:Key="WarningDarkBrush" Color="{StaticResource WarningDarkColor}"/>

    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="ErrorLightBrush" Color="{StaticResource ErrorLightColor}"/>
    <SolidColorBrush x:Key="ErrorDarkBrush" Color="{StaticResource ErrorDarkColor}"/>

    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>
    <SolidColorBrush x:Key="InfoLightBrush" Color="{StaticResource InfoLightColor}"/>
    <SolidColorBrush x:Key="InfoDarkBrush" Color="{StaticResource InfoDarkColor}"/>

    <!-- 标题画刷 -->
    <SolidColorBrush x:Key="Heading1ColorBrush" Color="{StaticResource Heading1Color}"/>
    <SolidColorBrush x:Key="Heading2ColorBrush" Color="{StaticResource Heading2Color}"/>
    <SolidColorBrush x:Key="Heading3ColorBrush" Color="{StaticResource Heading3Color}"/>
    <SolidColorBrush x:Key="Heading4ColorBrush" Color="{StaticResource Heading4Color}"/>
    <SolidColorBrush x:Key="Heading5ColorBrush" Color="{StaticResource Heading5Color}"/>
    <SolidColorBrush x:Key="Heading6ColorBrush" Color="{StaticResource Heading6Color}"/>

    <SolidColorBrush x:Key="Heading1ColorDarkBrush" Color="{StaticResource Heading1ColorDark}"/>
    <SolidColorBrush x:Key="Heading2ColorDarkBrush" Color="{StaticResource Heading2ColorDark}"/>
    <SolidColorBrush x:Key="Heading3ColorDarkBrush" Color="{StaticResource Heading3ColorDark}"/>
    <SolidColorBrush x:Key="Heading4ColorDarkBrush" Color="{StaticResource Heading4ColorDark}"/>
    <SolidColorBrush x:Key="Heading5ColorDarkBrush" Color="{StaticResource Heading5ColorDark}"/>
    <SolidColorBrush x:Key="Heading6ColorDarkBrush" Color="{StaticResource Heading6ColorDark}"/>
</ResourceDictionary>