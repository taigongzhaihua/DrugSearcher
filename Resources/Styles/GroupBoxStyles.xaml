<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 基础GroupBox样式 - 使用边框型控件资源 -->
    <Style x:Key="BaseGroupBoxStyle" TargetType="GroupBox">
        <Setter Property="BorderThickness" Value="1.2"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Background" Value="{DynamicResource WindowBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource BorderControlForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderControlBorderBrush}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="GroupBox">
                    <Grid Background="{TemplateBinding Background}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- 头部区域 -->
                        <Border Grid.Row="0" 
                                Background="{TemplateBinding Background}"
                                Padding="6,2"
                                Margin="20,0,0,-15"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Panel.ZIndex="1"
                                Height="30">
                            <ContentPresenter ContentSource="Header" 
                                              TextElement.Foreground="{DynamicResource Heading6Brush}"
                                              TextElement.FontWeight="{TemplateBinding FontWeight}"
                                              TextElement.FontSize="{TemplateBinding FontSize}"
                                              VerticalAlignment="Center"/>
                        </Border>

                        <!-- 内容区域 -->
                        <Border Grid.Row="1"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4"
                                ClipToBounds="True">
                            <ContentPresenter Margin="0,15,0,0"/>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="BorderBrush" Value="{DynamicResource BorderControlDisabledBorderBrush}"/>
                            <Setter Property="Foreground" Value="{DynamicResource BorderControlDisabledForegroundBrush}"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" Value="{DynamicResource BorderControlHoverBorderBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 无边框GroupBox样式 -->
    <Style x:Key="BorderlessGroupBoxStyle" TargetType="GroupBox">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Background" Value="{DynamicResource WindowBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="GroupBox">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- 头部区域 -->
                        <Border Grid.Row="0" 
                                Background="{DynamicResource SurfaceBrush}"
                                Padding="12,8"
                                Margin="0,0,0,1">
                            <ContentPresenter ContentSource="Header" 
                                              TextElement.Foreground="{DynamicResource Heading5Brush}"
                                              TextElement.FontWeight="{TemplateBinding FontWeight}"
                                              TextElement.FontSize="{TemplateBinding FontSize}"/>
                        </Border>

                        <!-- 内容区域 - 无边框 -->
                        <Border Grid.Row="1"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="{DynamicResource DisabledTextBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 卡片样式GroupBox -->
    <Style x:Key="CardGroupBoxStyle" TargetType="GroupBox">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="8"/>
        <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="GroupBox">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{DynamicResource CardBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="0"
                            Effect="{DynamicResource CardShadowEffect}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- 头部区域 -->
                            <Border Grid.Row="0" 
                                    Background="{DynamicResource SurfaceBrush}"
                                    Padding="16,12"
                                    CornerRadius="8,8,0,0">
                                <ContentPresenter ContentSource="Header" 
                                                  TextElement.Foreground="{DynamicResource Heading4Brush}"
                                                  TextElement.FontWeight="{TemplateBinding FontWeight}"
                                                  TextElement.FontSize="16"/>
                            </Border>

                            <!-- 内容区域 -->
                            <Border Grid.Row="1"
                                    Background="{TemplateBinding Background}"
                                    Padding="{TemplateBinding Padding}"
                                    CornerRadius="0,0,8,8">
                                <ContentPresenter/>
                            </Border>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="BorderBrush" Value="{DynamicResource CardDisabledBorderBrush}"/>
                            <Setter Property="Foreground" Value="{DynamicResource DisabledTextBrush}"/>
                            <Setter Property="Opacity" Value="0.8"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Effect" Value="{DynamicResource ElevatedShadowEffect}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 强调样式GroupBox - 使用主题色 -->
    <Style x:Key="AccentGroupBoxStyle" TargetType="GroupBox" BasedOn="{StaticResource BaseGroupBoxStyle}">
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryControlBackgroundBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="GroupBox">
                    <Grid Background="{TemplateBinding Background}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- 头部区域 - 使用主题色背景 -->
                        <Border Grid.Row="0" 
                                Background="{DynamicResource PrimaryControlBackgroundBrush}"
                                Padding="10,4"
                                Margin="20,0,0,-15"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Panel.ZIndex="1"
                                Height="30"
                                CornerRadius="4">
                            <ContentPresenter ContentSource="Header" 
                                              TextElement.Foreground="{DynamicResource PrimaryControlForegroundBrush}"
                                              TextElement.FontWeight="{TemplateBinding FontWeight}"
                                              TextElement.FontSize="{TemplateBinding FontSize}"
                                              VerticalAlignment="Center"/>
                        </Border>

                        <!-- 内容区域 -->
                        <Border Grid.Row="1"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4"
                                ClipToBounds="True">
                            <ContentPresenter Margin="0,15,0,0"/>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryControlDisabledBorderBrush}"/>
                            <Setter Property="Opacity" Value="0.6"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryControlHoverBackgroundBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 最小化样式GroupBox -->
    <Style x:Key="MinimalGroupBoxStyle" TargetType="GroupBox">
        <Setter Property="BorderThickness" Value="0,1,0,0"/>
        <Setter Property="Padding" Value="0,12,0,0"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource SecondaryTextBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="GroupBox">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- 头部区域 -->
                        <ContentPresenter Grid.Row="0"
                                          ContentSource="Header" 
                                          TextElement.Foreground="{TemplateBinding Foreground}"
                                          TextElement.FontWeight="{TemplateBinding FontWeight}"
                                          TextElement.FontSize="{TemplateBinding FontSize}"
                                          Margin="0,0,0,8"/>

                        <!-- 内容区域 - 只有顶部边框 -->
                        <Border Grid.Row="1"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 信息样式GroupBox - 使用信息色 -->
    <Style x:Key="InfoGroupBoxStyle" TargetType="GroupBox" BasedOn="{StaticResource BaseGroupBoxStyle}">
        <Setter Property="BorderBrush" Value="{DynamicResource InfoControlBorderBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="GroupBox">
                    <Grid Background="{TemplateBinding Background}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- 头部区域 -->
                        <Border Grid.Row="0" 
                                Background="{DynamicResource InfoControlBackgroundBrush}"
                                Padding="10,4"
                                Margin="20,0,0,-15"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Panel.ZIndex="1"
                                Height="30"
                                CornerRadius="4">
                            <ContentPresenter ContentSource="Header" 
                                              TextElement.Foreground="{DynamicResource InfoControlForegroundBrush}"
                                              TextElement.FontWeight="{TemplateBinding FontWeight}"
                                              TextElement.FontSize="{TemplateBinding FontSize}"
                                              VerticalAlignment="Center"/>
                        </Border>

                        <!-- 内容区域 -->
                        <Border Grid.Row="1"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4"
                                ClipToBounds="True">
                            <ContentPresenter Margin="0,15,0,0"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>